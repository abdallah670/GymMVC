
@using System.Linq
@using System.Text.Json
@model IEnumerable<GymBLL.ModelVM.Nutrition.MealLogVM>

@{
    ViewData["Title"] = "Meal Logs";
    var modelList = Model ?? Enumerable.Empty<GymBLL.ModelVM.Nutrition.MealLogVM>();
}

<div class="container-fluid py-4">
    <!-- Header -->
   

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-success text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Total Logs</h6>
                            <h3 class="mb-0">@modelList.Count()</h3>
                        </div>
                        <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-list fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Avg Calories</h6>
                            <h3 class="mb-0">@(modelList.Any() ? modelList.Average(m => m.CaloriesConsumed).ToString() : "0")</h3>
                        </div>
                        <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-fire fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-warning text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">This Week</h6>
                            <h3 class="mb-0">@modelList.Count(m => m.Date >= DateTime.Now.AddDays(-7))</h3>
                        </div>
                        <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-calendar-week fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-info text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Today</h6>
                            <h3 class="mb-0">@modelList.Count(m => m.Date.Date == DateTime.Today)</h3>
                        </div>
                        <div class="icon-shape bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-calendar-day fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Meal Log History</h5>
                <div class="d-flex gap-2">
                    <input type="date" class="form-control form-control-sm w-auto" id="dateFilter" placeholder="Filter by date">
                    <button class="btn btn-sm btn-outline-light" id="resetFilter">
                        <i class="fas fa-redo"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-dark mb-0" id="mealLogsTable">
                    <thead class="thead-dark">
                        <tr>
                            <th class="ps-4">
                                <div class="d-flex align-items-center">
                                    <span>ID</span>
                                    <i class="fas fa-sort ms-2 text-muted"></i>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Date</span>
                                    <i class="fas fa-sort ms-2 text-muted"></i>
                                </div>
                            </th>
                            <th>Meals</th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Calories</span>
                                    <i class="fas fa-fire ms-2 text-warning"></i>
                                </div>
                            </th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!modelList.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                                    <h5 class="text-white">No meal logs found</h5>
                                    <p class="text-white-50">Start tracking your meals to see your nutrition history.</p>
                                    <a  asp-controller="DietPlanAssignment" asp-action="TodayMeal" class="btn btn-success mt-2">
                                        <i class="fas fa-plus me-1"></i> Create First Log
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in modelList.OrderByDescending(m => m.Date))
                            {
                                <tr class="align-middle">
                                    <td class="ps-4">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar-day text-primary me-2"></i>
                                            <div>
                                                <div class="fw-bold">@item.Date.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@item.Date.ToString("dddd")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.MealsConsumed))
                                        {
                                            <div class="meal-preview small">
                                                @{
                                                    var meals = item.MealsConsumed.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                                    var displayText = meals.Length > 2
                                                    ? string.Join(", ", meals.Take(2)) + $" +{meals.Length - 2} more"
                                                    : item.MealsConsumed;
                                                }
                                                <i class="fas fa-utensil-spoon text-success me-1"></i>
                                                @displayText
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">No meals logged</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                                @{
                                                    // Ensure decimal division
                                                    var itemCalories = Convert.ToDouble(item.CaloriesConsumed);
                                                    var progress = Math.Min((itemCalories /(double) item.DietPlanAssignment.DietPlan.TotalCalories) * 100.0, 100.0);
                                                    var colorClass = progress > 100 ? "bg-danger" : progress > 80 ? "bg-warning" : "bg-success";
                                                    var progressValue = (int)Math.Round(progress);
                                                }
                                                <div class="progress-bar @colorClass" role="progressbar" style="width: @(progressValue)%"></div>
                                            </div>
                                            <span class="fw-bold @(item.CaloriesConsumed > item.DietPlanAssignment.DietPlan.TotalCalories ? "text-danger" :
                                                item.CaloriesConsumed > item.DietPlanAssignment.DietPlan.TotalCalories ? "text-warning" : "text-success")">
                                                @item.CaloriesConsumed
                                            </span>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this meal log?');">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (modelList.Any())
        {
            <div class="card-footer bg-dark border-top border-secondary py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Showing <strong>@modelList.Count()</strong> meal logs
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-light" id="exportCsvBtn">
                            <i class="fas fa-download me-1"></i> Export
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


    <style>
        .card {
            border-radius: 0.75rem;
            border: none;
        }

            .card.bg-gradient-success {
                background: linear-gradient(135deg, #00b09b, #96c93d);
            }

            .card.bg-gradient-primary {
                background: linear-gradient(135deg, #4776E6, #8E54E9);
            }

            .card.bg-gradient-warning {
                background: linear-gradient(135deg, #f46b45, #eea849);
            }

            .card.bg-gradient-info {
                background: linear-gradient(135deg, #4A00E0, #8E2DE2);
            }

        .icon-shape {
            width: 50px;
            height: 50px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

        .meal-preview {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .progress {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

        .btn-group .btn {
            border-radius: 0.375rem !important;
            margin-right: 2px;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }
    </style>



    <script>
        (function() {
            // Pre-serialize model data safely for client use
            const mealData = @Html.Raw(JsonSerializer.Serialize(modelList.Select(m => new {
                m.Id,
                Date = m.Date.ToString("yyyy-MM-dd"),
                m.MealsConsumed,
                m.CaloriesConsumed
            })));

            // Date filtering
            const dateFilter = document.getElementById('dateFilter');
            const resetFilter = document.getElementById('resetFilter');
            const table = document.getElementById('mealLogsTable');
            const tbody = table?.querySelector('tbody');

            function parseRowDate(row) {
                const dateElem = row.querySelector('.fw-bold');
                return dateElem ? new Date(dateElem.textContent.trim()) : null;
            }

            if (dateFilter) {
                dateFilter.addEventListener('change', function() {
                    const filterDate = this.value;
                    const rows = Array.from(tbody.querySelectorAll('tr'));

                    rows.forEach(row => {
                        // Skip placeholder/no-data row
                        if (!row.querySelector('.badge')) return;
                        const rowDateObj = parseRowDate(row);
                        if (!filterDate || !rowDateObj) {
                            row.style.display = '';
                            return;
                        }
                        const filterDateObj = new Date(filterDate);
                        // Compare date parts
                        if (rowDateObj.toDateString() !== filterDateObj.toDateString()) {
                            row.style.display = 'none';
                        } else {
                            row.style.display = '';
                        }
                    });
                });
            }

            if (resetFilter) {
                resetFilter.addEventListener('click', function() {
                    if (dateFilter) dateFilter.value = '';
                    Array.from(tbody.querySelectorAll('tr')).forEach(row => row.style.display = '');
                });
            }

            // Export to CSV using the pre-serialized mealData
            const exportBtn = document.getElementById('exportCsvBtn');
            function csvEscape(value) {
                if (value === null || value === undefined) return '';
                const s = String(value);
                // Escape double quotes and wrap fields containing comma/newline/quote
                if (s.includes('"')) return `"${s.replace(/"/g, '""')}"`;
                if (s.includes(',') || s.includes('\n')) return `"${s}"`;
                return s;
            }

            function exportToCSV() {
                const rows = [];
                rows.push(['ID', 'Date', 'Meals Consumed', 'Calories']);
                mealData.forEach(d => rows.push([d.Id, d.Date, d.MealsConsumed, d.CaloriesConsumed]));
                const csvContent = rows.map(r => r.map(csvEscape).join(',')).join('\n');
                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'meal-logs-' + new Date().toISOString().split('T')[0] + '.csv';
                document.body.appendChild(a);
                a.click();
                a.remove();
                URL.revokeObjectURL(url);
            }

            if (exportBtn) exportBtn.addEventListener('click', exportToCSV);

            // Table sorting - robust cell extraction
            const headers = Array.from(document.querySelectorAll('#mealLogsTable th'));
            headers.forEach((th, index) => {
                th.style.cursor = 'pointer';
                th.addEventListener('click', function() {
                    const rows = Array.from(tbody.querySelectorAll('tr')).filter(r => r.querySelector('.badge')); // ignore placeholder
                    const getValue = (row) => {
                        if (index === 0) {
                            const badge = row.querySelector('.badge');
                            return parseInt(badge ? badge.textContent.replace('#', '').trim() : '0', 10);
                        }
                        if (index === 1) {
                            const dateElem = row.querySelector('.fw-bold');
                            return dateElem ? new Date(dateElem.textContent.trim()) : new Date(0);
                        }
                        if (index === 3) {
                            const calSpan = row.querySelector('td:nth-child(4) .fw-bold') || row.querySelector('td:nth-child(4) span');
                            return parseInt(calSpan ? calSpan.textContent.trim() : '0', 10);
                        }
                        return row.children[index].textContent.trim().toLowerCase();
                    };

                    const sorted = rows.sort((a, b) => {
                        const va = getValue(a);
                        const vb = getValue(b);
                        if (va instanceof Date && vb instanceof Date) return va - vb;
                        if (typeof va === 'number' && typeof vb === 'number') return va - vb;
                        return String(va).localeCompare(String(vb));
                    });

                    // toggle ascending/descending if already sorted
                    if (th.dataset.sorted === 'asc') {
                        sorted.reverse();
                        th.dataset.sorted = 'desc';
                    } else {
                        th.dataset.sorted = 'asc';
                    }

                    // reattach
                    sorted.forEach(r => tbody.appendChild(r));
                });
            });
        })();
    </script>
