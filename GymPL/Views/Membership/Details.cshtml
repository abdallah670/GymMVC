@model GymBLL.ModelVM.Financial.MembershipVM

@{
    ViewData["Title"] = "Membership Details";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Membership Details</h1>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.MembershipType</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price</dd>

                <dt class="col-sm-3">Duration (Months)</dt>
                <dd class="col-sm-9">@Model.DurationInMonths</dd>

                <dt class="col-sm-3">Includes Workout Plan</dt>
                <dd class="col-sm-9">@(Model.HasWorkoutPlan ? "Yes" : "No")</dd>

                <dt class="col-sm-3">Includes Diet Plan</dt>
                <dd class="col-sm-9">@(Model.HasDietPlan ? "Yes" : "No")</dd>

                 <dt class="col-sm-3">Trainer Follow-up</dt>
                <dd class="col-sm-9">@(Model.IsFollowedByTrainer == true ? "Yes" : "No")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            </div>
        </div>
    </div>
</div>
