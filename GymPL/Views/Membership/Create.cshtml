@using GymBLL.ModelVM.Financial
@model MembershipVM


<div class="container py-4" style="max-width: 800px;">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-light rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 mb-0" style="color: var(--ink); font-weight: 700;">Create Membership</h1>
            <p class="text-muted mb-0">Define a new membership plan</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: var(--radius); background: var(--tile);">
        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="row g-4 mb-4">
                    <div class="col-12">
                        <label asp-for="MembershipType" class="form-label fw-bold small text-uppercase text-muted">Plan Name</label>
                        <input asp-for="MembershipType" class="form-control form-control-lg" placeholder="e.g. Gold Premium" />
                        <span asp-validation-for="MembershipType" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-bold small text-uppercase text-muted">Price ($)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">$</span>
                            <input asp-for="Price" class="form-control border-start-0" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DurationInMonths" class="form-label fw-bold small text-uppercase text-muted">Duration (Months)</label>
                        <div class="input-group">
                            <input asp-for="DurationInMonths" class="form-control border-end-0" type="number" />
                            <span class="input-group-text bg-light border-start-0">Months</span>
                        </div>
                        <span asp-validation-for="DurationInMonths" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4 text-muted opacity-25" />

                <h5 class="mb-3 fw-bold" style="color: var(--ink);">Included Features</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="form-check p-3 border rounded h-100" style="background-color: var(--bg-secondary);">
                            <input class="form-check-input" type="checkbox" asp-for="HasWorkoutPlan" id="checkWorkout">
                            <label class="form-check-label d-block" for="checkWorkout">
                                <span class="fw-bold d-block">Workout Plan</span>
                                <small class="text-muted">Includes customized workout routines</small>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check p-3 border rounded h-100" style="background-color: var(--bg-secondary);">
                            <input class="form-check-input" type="checkbox" asp-for="HasDietPlan" id="checkDiet">
                            <label class="form-check-label d-block" for="checkDiet">
                                <span class="fw-bold d-block">Diet Plan</span>
                                <small class="text-muted">Includes personalized nutrition guides</small>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check p-3 border rounded h-100" style="background-color: var(--bg-secondary);">
                            <input class="form-check-input" type="checkbox" asp-for="IsFollowedByTrainer" id="checkTrainer">
                            <label class="form-check-label d-block" for="checkTrainer">
                                <span class="fw-bold d-block">Trainer Follow-up</span>
                                <small class="text-muted">Dedicated trainer monitoring</small>
                            </label>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-check p-3 border rounded h-100" style="background-color: var(--bg-secondary);">
                            <input class="form-check-input" type="checkbox" asp-for="HasNotification" id="checkNotif">
                            <label class="form-check-label d-block" for="checkNotif">
                                <span class="fw-bold d-block">Notifications</span>
                                <small class="text-muted">SMS/Email alerts</small>
                            </label>
                        </div>
                    </div>
                </div>
                 
                <div class="mb-4">
                    <label asp-for="Features" class="form-label fw-bold small text-uppercase text-muted">Additional Description (Optional)</label>
                    <textarea asp-for="Features" class="form-control" rows="3" placeholder="Describe other benefits..."></textarea>
                    <span asp-validation-for="Features" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-light px-4">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5">Create Membership</button>
                </div>
            </form>
        </div>
    </div>
</div>
