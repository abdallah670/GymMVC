@using GymBLL.ModelVM.Financial
@model IEnumerable<MembershipVM>
@{
    ViewData["Title"] = "Manage Memberships";
}

<div class="container-fluid p-4" style="max-width: 1400px;">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1" style="color: var(--ink); font-weight: 700;">Membership Types</h1>
            <p style="color: var(--muted); opacity: 0.9; margin-bottom: 0;">Manage gym membership plans and pricing</p>
        </div>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 px-4 py-2" 
           style="border-radius: var(--radius); font-weight: 500; box-shadow: var(--shadow-sm);">
            <i class="fas fa-plus"></i> Add New Membership
        </a>
    </div>

   

    <!-- Membership Cards Grid -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border-0" 
                     style="border-radius: var(--radius); box-shadow: var(--shadow-sm); 
                            background: var(--tile); transition: transform 0.2s, box-shadow 0.2s;">
                    <div class="card-header bg-transparent border-0 pt-4 pb-0 px-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-0" style="color: var(--ink); font-weight: 700;">@item.MembershipType</h5>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Inactive</span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body px-4 pt-3">
                        <div class="d-flex align-items-baseline mb-3">
                            <h2 class="mb-0 me-2" style="color: var(--main-color); font-weight: 800;">$@item.Price</h2>
                            <span style="color: var(--muted); font-size: 0.9rem;">/ @item.DurationInMonths mo</span>
                        </div>

                        <ul class="list-unstyled mb-4">
                             <li class="mb-2 d-flex align-items-center @(item.HasWorkoutPlan ? "text-success" : "")" style="@(!item.HasWorkoutPlan ? "color: var(--muted); opacity: 0.7;" : "font-weight: 500;")">
                                <i class="fas @(item.HasWorkoutPlan ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                                Workout Plan
                            </li>
                            <li class="mb-2 d-flex align-items-center @(item.HasDietPlan ? "text-success" : "")" style="@(!item.HasDietPlan ? "color: var(--muted); opacity: 0.7;" : "font-weight: 500;")">
                                <i class="fas @(item.HasDietPlan ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                                Diet Plan
                            </li>
                             <li class="mb-2 d-flex align-items-center @(item.IsFollowedByTrainer == true ? "text-success" : "")" style="@(item.IsFollowedByTrainer != true ? "color: var(--muted); opacity: 0.7;" : "font-weight: 500;")">
                                <i class="fas @(item.IsFollowedByTrainer == true ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                                Trainer Follow-up
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer bg-transparent border-0 px-4 pb-4 pt-0">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">
                                <i class="fas fa-info-circle me-1"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger" 
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0 pb-0">
                            <h5 class="modal-title">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body text-center py-4">
                            <div class="mb-3 text-danger"><i class="fas fa-exclamation-triangle fa-3x"></i></div>
                            <p>Are you sure you want to delete <strong>@item.MembershipType</strong>?</p>
                            <p class="small text-muted mb-0">This action cannot be undone if not associated with any active subscriptions.</p>
                        </div>
                        <div class="modal-footer border-0 justify-content-center">
                            <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger px-4">Delete Permanently</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
