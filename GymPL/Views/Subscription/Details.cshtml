@using GymBLL.ModelVM.Financial
@model SubscriptionDetailsVM
@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container py-4" style="max-width: 900px;">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-light rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 mb-0" style="color: var(--ink); font-weight: 700;">Subscription Details</h1>
            <p class="text-muted mb-0">Overview for @Model.MemberName</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Info Card -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-4" style="border-radius: var(--radius); background: var(--tile);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h5 class="fw-bold mb-1" style="color: var(--primary);">@Model.MembershipType</h5>
                            <span class="text-muted small">Plan Type</span>
                        </div>
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 py-2">@Model.Status</span>
                        }
                    </div>

                    <div class="row g-4">
                        <div class="col-sm-6">
                            <div class="p-3 rounded" style="background-color: var(--bg-secondary);">
                                <small class="d-block text-muted text-uppercase fw-bold mb-1">Start Date</small>
                                <span class="fw-bold" style="color: var(--ink);">@Model.StartDate.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="p-3 rounded" style="background-color: var(--bg-secondary);">
                                <small class="d-block text-muted text-uppercase fw-bold mb-1">End Date</small>
                                <span class="fw-bold" style="color: var(--ink);">@Model.EndDate.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25" />

                    <!-- Plan Assignments -->
                    <h6 class="fw-bold mb-3" style="color: var(--ink);">Assigned Plans</h6>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0 py-3 bg-transparent d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-dumbbell me-2 text-muted" style="width: 20px;"></i>
                                <span class="fw-medium">Workout Plan</span>
                            </div>
                            @if (Model.WorkoutAssignmentVM != null)
                            {
                                <span class="badge bg-info bg-opacity-10 text-info">Assigned</span>
                            }
                            else
                            {
                                <span class="text-muted small">Not Assigned</span>
                            }
                        </div>
                         <div class="list-group-item px-0 py-3 bg-transparent d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-utensils me-2 text-muted" style="width: 20px;"></i>
                                <span class="fw-medium">Diet Plan</span>
                            </div>
                           
                            @if (Model.DietPlanAssignmentVM != null)
                            {
                                <span class="badge bg-info bg-opacity-10 text-info">Assigned</span>
                            }
                            else
                            {
                                <span class="text-muted small">Not Assigned</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar / Actions -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm" style="border-radius: var(--radius); background: var(--tile);">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3" style="color: var(--ink);">Fast Actions</h6>
                    
                    <div class="d-grid gap-2">
                         @if (Model.Status == "Active")
                        {
                            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-outline-warning w-100 text-start" 
                                        onclick="return confirm('Are you sure you want to cancel this subscription?');">
                                    <i class="fas fa-ban me-2"></i> Cancel Plan
                                </button>
                            </form>
                        }
                        
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-outline-danger w-100 text-start" 
                                    onclick="return confirm('Delete this record irreversibly?');">
                                <i class="fas fa-trash-alt me-2"></i> Delete Record
                            </button>
                        </form>
                    </div>

                    <div class="mt-4 pt-4 border-top">
                        <small class="text-muted d-block mb-2">Member ID</small>
                        <code class="d-block p-2 rounded bg-light">@Model.MemberId</code>
                    </div>
                     <div class="mt-2">
                        <small class="text-muted d-block mb-2">Subscription ID</small>
                        <code class="d-block p-2 rounded bg-light">#@Model.Id</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
