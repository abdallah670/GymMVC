@model GymBLL.ModelVM.External.SubscriptionVM

@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Subscription Details</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Subscription #@Model.Id</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Member</dt>
                <dd class="col-sm-9">@Model.MemberName</dd>

                <dt class="col-sm-3">Membership Plan</dt>
                <dd class="col-sm-9">@Model.MembershipType</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.Status == "Active" ? "success" : (Model.Status == "Cancelled" ? "danger" : "warning"))">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
