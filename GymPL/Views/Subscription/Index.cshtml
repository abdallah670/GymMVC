@using GymBLL.ModelVM.Financial
@model IEnumerable<SubscriptionVM>
@{
    ViewData["Title"] = "Manage Subscriptions";
}

<div class="container-fluid p-4" style="max-width: 1400px;">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1" style="color: var(--ink); font-weight: 700;">Subscriptions</h1>
            <p class="text-muted mb-0">Manage member subscriptions and status</p>
        </div>
        
        <!-- Filter Dropdown -->
        <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown">
                <i class="fas fa-filter me-2"></i> Filter: @(ViewBag.CurrentFilter == "All" ? "All Statuses" : ViewBag.CurrentFilter)
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item @(ViewBag.CurrentFilter == "All" ? "active" : "")" asp-action="Index" asp-route-status="All">All Statuses</a></li>
                <li><a class="dropdown-item @(ViewBag.CurrentFilter == "Active" ? "active" : "")" asp-action="Index" asp-route-status="Active">Active</a></li>
                <li><a class="dropdown-item @(ViewBag.CurrentFilter == "Expired" ? "active" : "")" asp-action="Index" asp-route-status="Expired">Expired</a></li>
                <li><a class="dropdown-item @(ViewBag.CurrentFilter == "Cancelled" ? "active" : "")" asp-action="Index" asp-route-status="Cancelled">Cancelled</a></li>
            </ul>
        </div>
    </div>

     <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" 
             style="border-radius: var(--radius); border: none; background-color: #d1e7dd; color: #0f5132;">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert"
             style="border-radius: var(--radius); border: none; background-color: #f8d7da; color: #842029;">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Subscriptions Table -->
    <div class="card border-0 shadow-sm" style="border-radius: var(--radius); overflow: hidden;">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3 border-0 text-muted small fw-bold text-uppercase">Member</th>
                        <th class="px-4 py-3 border-0 text-muted small fw-bold text-uppercase">Plan</th>
                        <th class="px-4 py-3 border-0 text-muted small fw-bold text-uppercase">Status</th>
                        <th class="px-4 py-3 border-0 text-muted small fw-bold text-uppercase">Starts</th>
                        <th class="px-4 py-3 border-0 text-muted small fw-bold text-uppercase">Ends</th>
                        <th class="px-4 py-3 border-0 text-end text-muted small fw-bold text-uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-4 py-3">
                                <span class="fw-bold" style="color: var(--ink);">@item.MemberName</span>
                            </td>
                            <td class="px-4 py-3">
                                <span class="badge bg-primary bg-opacity-10 text-primary">@item.MembershipType</span>
                            </td>
                            <td class="px-4 py-3">
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                }
                                else if (item.Status == "Expired")
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3">Expired</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">@item.Status</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-muted">
                                @item.StartDate.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-4 py-3 text-muted">
                                @item.EndDate.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-4 py-3 text-end">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light rounded-circle" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-eye me-2 text-primary"></i> View Details
                                            </a>
                                        </li>
                                        @if (item.Status == "Active")
                                        {
                                            <li>
                                                <form asp-action="Cancel" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="dropdown-item text-warning" onclick="return confirm('Are you sure you want to cancel this subscription?');">
                                                        <i class="fas fa-ban me-2"></i> Cancel
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this subscription log? This is irreversible.');">
                                                    <i class="fas fa-trash-alt me-2"></i> Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">No subscriptions found with status: <strong>@ViewBag.CurrentFilter</strong></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
