@model GymBLL.ModelVM.Workout.WorkoutPlanVM

@{
    ViewData["Title"] = "Workout Plan Details";
    var returnPage = Context.Request.Query["page"].FirstOrDefault() ?? "1";
    var returnUrl = Context.Request.Query["returnUrl"].FirstOrDefault();
    // Determine the back URL
    string backUrl;

    if (!string.IsNullOrEmpty(returnUrl))
    {
        // Use the provided returnUrl
        backUrl = returnUrl;
    }
    else
    {
        // Default: Go back to Index with page number
        backUrl = Url.Action("Index", new { page = returnPage });
    }
}

<div class="plan-details-container">
    <div class="mb-4">
        <a href="@backUrl" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back 
        </a>
    </div>

    <!-- Header -->
    <div class="plan-header plan-header-workout">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h2 class="mb-1">
                    <i class="fas fa-dumbbell"></i> @Model.Name
                </h2>
                <p class="mb-0 opacity-75">
                    <i class="fas fa-signal"></i> @Model.Difficulty |
                    <i class="fas fa-bullseye"></i> @Model.Goal |
                    <i class="fas fa-calendar-week"></i> @Model.DurationWeeks days per Week
                </p>
            </div>
            <div>
                @if (Model.IsActive)
                {
                    <span class="plan-status-badge">
                        <i class="fas fa-check-circle"></i> Active
                    </span>
                }
                else
                {
                    <span class="plan-status-badge plan-status-badge-inactive">
                        <i class="fas fa-times-circle"></i> Inactive
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Description -->
    <div class="plan-section">
        <h4 class="text-ink mb-3">
            <i class="fas fa-info-circle"></i> Description
        </h4>
        <p class="text-muted mb-0 lh-lg">
            @(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)
        </p>
    </div>

    <!-- Plan Info -->
    <div class="plan-section">
        <h4 class="text-ink mb-3">
            <i class="fas fa-clipboard-list"></i> Plan Details
        </h4>
        <div class="plan-info-grid">
            <div class="plan-info-item">
                <div class="plan-info-value text-primary">@Model.DurationWeeks</div>
                <div class="plan-info-label">Days/Week</div>
            </div>
            <div class="plan-info-item">
                <div class="plan-info-value text-info">@Model.Difficulty</div>
                <div class="plan-info-label">Difficulty</div>
            </div>
            <div class="plan-info-item">
                <div class="plan-info-value text-success">@Model.Goal</div>
                <div class="plan-info-label">Goal</div>
            </div>
        </div>
    </div>

    <!-- Exercises List -->
    <div class="plan-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-ink m-0">
                <i class="fas fa-running"></i> Exercises
            </h4>
            <a asp-controller="WorkoutPlanItem"
               asp-action="Create"
               asp-route-workoutPlanId="@Model.Id"
               asp-route-returnUrl="@Url.Action("Details", "WorkoutPlan", new { id = Model.Id,  page = returnPage })"
               class="btn btn-success btn-sm">
                <i class="fas fa-plus me-1"></i>Add Exercise
            </a>
        </div>

        @if (Model.workoutPlanItemVMs != null && Model.workoutPlanItemVMs.Any())
        {
            var groupedExercises = Model.workoutPlanItemVMs.OrderBy(e => e.DayNumber).GroupBy(e => e.DayNumber);

            foreach (var group in groupedExercises)
            {
                <div class="plan-item-group">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="text-primary m-0 border-bottom pb-2">
                            <i class="fas fa-calendar-day me-2"></i>Day @group.Key
                        </h5>
                        <span class="badge bg-secondary">@group.Count() exercises</span>
                    </div>

                    <div class="d-grid gap-3">
                        @foreach (var exercise in group)
                        {
                            <div class="plan-item-card">
                                <div class="plan-item-header">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-2 fs-5">@exercise.ExerciseName</h6>
                                        <div class="plan-item-meta">
                                            @if (!string.IsNullOrEmpty(exercise.Sets))
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fas fa-layer-group me-1"></i>@exercise.Sets sets
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(exercise.Reps))
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-redo me-1"></i>@exercise.Reps reps
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(exercise.RestDuration))
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-stopwatch me-1"></i>@exercise.RestDuration sec
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="plan-item-actions">
                                        @if (!string.IsNullOrEmpty(exercise.VideoUrl))
                                        {
                                            <a href="@exercise.VideoUrl" target="_blank" class="btn btn-sm btn-outline-info" title="Watch Video">
                                                <i class="fas fa-play"></i>
                                            </a>
                                        }
                                        <a asp-controller="WorkoutPlanItem"
                                           asp-action="Edit"
                                           asp-route-id="@exercise.Id"
                                           asp-route-returnUrl="@Url.Action("Details", "WorkoutPlan", new { id = Model.Id, page = returnPage })"
                                           class="btn btn-sm btn-outline-primary" title="Edit Exercise">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-controller="WorkoutPlanItem"
                                              asp-action="Delete"
                                              asp-route-id="@exercise.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this exercise?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="returnUrl" value="@Url.Action("Details", "WorkoutPlan", new { id = Model.Id, page = returnPage })" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Exercise">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(exercise.Notes))
                                {
                                    <div class="mt-2 pt-2 border-top border-dashed small text-muted">
                                        <i class="fas fa-sticky-note me-1"></i> @exercise.Notes
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-running fa-3x text-muted mb-3"></i>
                <h5 class="text-ink">No Exercises Added Yet</h5>
                <p class="text-muted mb-3">Add your first exercise to get started.</p>
                <a asp-controller="WorkoutPlanItem"
                   asp-action="Create"
                   asp-route-workoutPlanId="@Model.Id"
                   asp-route-returnUrl="@Url.Action("Details", "WorkoutPlan", new { id = Model.Id, page = returnPage })"
                   asp-route-returnPage="@returnPage"
                   class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add First Exercise
                </a>
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="plan-actions-footer">
        <a asp-action="Edit" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString" asp-route-id="@Model.Id" asp-route-returnPage="@returnPage" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Edit Plan
        </a>
        <a asp-controller="WorkoutPlanItem"
           asp-action="Create"
           asp-route-workoutPlanId="@Model.Id"
           asp-route-returnUrl="@Url.Action("Details", "WorkoutPlan", new { id = Model.Id, page = returnPage })"
           asp-route-returnPage="@returnPage"
           class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add Exercise
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
              onsubmit="return confirm('Are you sure you want to delete this workout plan?');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnPage" value="@returnPage" />
            <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-trash me-2"></i>Delete Plan
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/plans.js" asp-append-version="true"></script>
}
