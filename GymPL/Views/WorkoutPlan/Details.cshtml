@model GymBLL.ModelVM.Workout.WorkoutPlanVM

@{
    ViewData["Title"] = "Workout Plan Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Workout Plan Details</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Name</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Plan Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.DurationWeeks</dd>

                <dt class="col-sm-3">Difficulty</dt>
                <dd class="col-sm-9">@Model.Difficulty</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
