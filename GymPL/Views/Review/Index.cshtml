@model List<TrainerReviewVM>
@{
    ViewData["Title"] = "My Reviews";
    var averageRating = Model.Any() ? Model.Average(r => r.Rating) : 0;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg" style="background: var(--tile); border: 1px solid var(--frame) !important;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h3 class="fw-bold mb-1" style="color: var(--ink);">My Reviews</h3>
                            <p class="mb-0" style="color: var(--muted); font-size: 0.95rem;">See what your trainees are saying</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="d-inline-block text-center rounded-pill px-4 py-3" style="background: var(--bg); border: 1px solid var(--frame);">
                                <h2 class="text-warning mb-0 display-5 fw-bold">@averageRating.ToString("0.0")</h2>
                                <div class="text-warning mb-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas @(i <= Math.Round(averageRating) ? "fa-star" : "fa-star")"
                                           style="@(i <= Math.Round(averageRating) ? "color: #FFD700;" : "color: #6c757d; opacity: 0.5;")"></i>
                                    }
                                </div>
                                <small style="color: var(--muted); font-weight: 500;">Based on @Model.Count reviews</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="card shadow-lg" style="background: var(--tile); border: 1px solid var(--frame) !important;">
                    <div class="card-body text-center py-5">
                        <i class="far fa-comment-dots fa-4x mb-3" style="color: var(--muted); opacity: 0.5;"></i>
                        <h4 style="color: var(--ink);">No reviews yet</h4>
                        <p class="mb-0" style="color: var(--muted);">Encourage your trainees to leave feedback!</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var review in Model)
            {
                <div class="col-md-6 col-xl-4 mb-4">
                    <div class="card shadow-sm h-100 hover-shadow" style="background: var(--tile); border: 1px solid var(--frame) !important; color: var(--ink);">
                        <div class="card-body p-3">
                            <!-- Header with avatar and rating -->
                            <div class="d-flex align-items-start mb-3">
                                <!-- Avatar - Fixed size -->
                                <div class="position-relative me-3" style="width: 45px; height: 45px;">
                                    @if (!string.IsNullOrEmpty(review.MemberPicture))
                                    {
                                        <img src="@review.MemberPicture"
                                             class="rounded-circle w-100 h-100 object-fit-cover border"
                                             style="min-width: 45px; min-height: 45px; border-color: var(--frame) !important;"
                                             alt="@review.MemberName">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle w-100 h-100 d-flex align-items-center justify-content-center bg-gradient-primary text-white border"
                                             style="min-width: 45px; min-height: 45px; border-color: var(--frame) !important;">
                                            <span class="fw-bold">@review.MemberName[0]</span>
                                        </div>
                                    }
                                </div>
                                <!-- Member info -->
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold" style="color: var(--ink);">@review.MemberName</h6>
                                    <small style="color: var(--muted); font-size: 0.85rem;">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                <!-- Stars rating -->
                                <div class="text-warning ms-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "" : "opacity-25")"
                                           style="font-size: 0.8rem; @(i > review.Rating ? "color: var(--muted);" : "")"></i>
                                    }
                                </div>
                            </div>
                            <!-- Review comment -->
                            <div class="rounded p-3 shadow-sm" style="background: var(--frame); border: 1px solid var(--rule);">
                                <p class="mb-0 fst-italic" style="color: var(--ink); opacity: 0.95;">
                                    "@review.Comment"
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.4) !important;
        }

    .bg-gradient-dark {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
    }

    .bg-gray-800 {
        background-color: rgba(45, 55, 72, 0.5);
    }

    .border-gray-600 {
        border-color: #4a5568 !important;
    }

    .border-gray-700 {
        border-color: #2d3748 !important;
    }
</style>