@model List<TrainerReviewVM>
@{
    ViewData["Title"] = "My Reviews";
    var averageRating = Model.Any() ? Model.Average(r => r.Rating) : 0;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-dark shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h3 class="text-white mb-1">My Reviews</h3>
                            <p class="text-white-50 mb-0">See what your trainees are saying</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="d-inline-block text-center bg-dark rounded-pill px-4 py-3">
                                <h2 class="text-warning mb-0 display-5 fw-bold">@averageRating.ToString("0.0")</h2>
                                <div class="text-warning mb-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas @(i <= Math.Round(averageRating) ? "fa-star" : "fa-star")"
                                           style="@(i <= Math.Round(averageRating) ? "color: #FFD700;" : "color: #6c757d; opacity: 0.5;")"></i>
                                    }
                                </div>
                                <small class="text-white-50">Based on @Model.Count reviews</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="card bg-gradient-dark shadow">
                    <div class="card-body text-center py-5">
                        <i class="far fa-comment-dots text-secondary fa-4x mb-3"></i>
                        <h4 class="text-white">No reviews yet</h4>
                        <p class="text-white-50 mb-0">Encourage your trainees to leave feedback!</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var review in Model)
            {
                <div class="col-md-6 col-xl-4 mb-4">
                    <div class="card bg-gradient-dark shadow-sm h-100 border border-gray-700 hover-shadow">
                        <div class="card-body p-3">
                            <!-- Header with avatar and rating -->
                            <div class="d-flex align-items-start mb-3">
                                <!-- Avatar - Fixed size -->
                                <div class="position-relative me-3" style="width: 45px; height: 45px;">
                                    @if (!string.IsNullOrEmpty(review.MemberPicture))
                                    {
                                        <img src="@review.MemberPicture"
                                             class="rounded-circle w-100 h-100 object-fit-cover border border-gray-600"
                                             style="min-width: 45px; min-height: 45px;"
                                             alt="@review.MemberName">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle w-100 h-100 d-flex align-items-center justify-content-center bg-gradient-primary text-white border border-gray-600"
                                             style="min-width: 45px; min-height: 45px;">
                                            <span class="fw-bold">@review.MemberName[0]</span>
                                        </div>
                                    }
                                </div>

                                <!-- Member info -->
                                <div class="flex-grow-1">
                                    <h6 class="text-white mb-0">@review.MemberName</h6>
                                    <small class="text-white-50">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>

                                <!-- Stars rating -->
                                <div class="text-warning ms-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "" : "text-secondary")"
                                           style="font-size: 0.8rem;"></i>
                                    }
                                </div>
                            </div>

                            <!-- Review comment -->
                            <div class="bg-gray-800 rounded p-3">
                                <p class="text-white-80 mb-0 fst-italic">
                                    "@review.Comment"
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.4) !important;
        }

    .bg-gradient-dark {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
    }

    .bg-gray-800 {
        background-color: rgba(45, 55, 72, 0.5);
    }

    .border-gray-600 {
        border-color: #4a5568 !important;
    }

    .border-gray-700 {
        border-color: #2d3748 !important;
    }
</style>