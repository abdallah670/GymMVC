@model List<GymBLL.ModelVM.Communication.NotificationVM>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container py-4">
    <h2 class="mb-4">All Notifications</h2>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> You have no notifications.
        </div>
    }
    else
    {
        <div class="notification-full-list" style="display: flex; flex-direction: column; gap: 1rem;">
            @foreach (var notification in Model)
            {
                <div class="notification-card @(notification.Status == "Unread" ? "unread" : "")" 
                     style="background: var(--tile); border: 1px solid var(--frame); padding: 1.5rem; border-radius: var(--radius); transition: all 0.3s ease;">
                    <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                        <h5 class="mb-0 fw-bold" style="color: var(--main-color); font-size: 1.1rem;">@notification.Type</h5>
                        <small class="text-muted">@notification.SendTime.ToString("g")</small>
                    </div>
                    <p class="mb-3" style="color: var(--ink); line-height: 1.6;">@notification.Message</p>
                    <div class="d-flex justify-content-between align-items-center border-top pt-3" style="border-color: var(--rule) !important;">
                        @if (notification.Status == "Unread")
                        {
                            <button class="btn btn-sm btn-outline-primary" style="padding: 0.25rem 0.75rem; font-size: 0.8rem;" onclick="markAsReadList(@notification.Id, this)">
                                <i class="fas fa-check me-1"></i> Mark as Read
                            </button>
                        }
                        else
                        {
                            <span class="text-muted" style="font-size: 0.85rem;"><i class="fas fa-check-double me-1 text-success"></i> Read</span>
                        }
                    </div>
                </div>
            }
        </div>

<style>
    .notification-card.unread {
        border-color: var(--main-color) !important;
        box-shadow: 0 4px 15px color-mix(in srgb, var(--main-color) 10%, transparent);
    }
</style>
    }
</div>

<script>
    function markAsReadList(id, element) {
         fetch('/Notification/MarkAsRead?id=' + id, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const card = element.closest('.notification-card');
                    const container = element.parentElement;
                    card.classList.remove('unread');
                    container.innerHTML = '<span class="text-muted" style="font-size: 0.85rem;"><i class="fas fa-check-double me-1 text-success"></i> Read</span>';
                }
            });
    }
</script>
