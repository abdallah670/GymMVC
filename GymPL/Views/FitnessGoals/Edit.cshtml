@model GymBLL.ModelVM.Member.FitnessGoalsVM

@{
    ViewData["Title"] = "Edit Fitness Goal";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-light rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 mb-0" style="color: var(--ink); font-weight: 700;">Edit Fitness Goal</h1>
            <p style="color: var(--muted); opacity: 0.9; margin-bottom: 0;">Update details for @Model.GoalName</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: var(--radius); background: var(--tile);">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-4">
                            <label asp-for="GoalName" class="form-label fw-bold small text-uppercase" style="color: var(--muted); opacity: 0.8;">Goal Name</label>
                            <input asp-for="GoalName" class="form-control form-control-lg" style="background: var(--bg); color: var(--ink); border-color: var(--rule);" />
                            <span asp-validation-for="GoalName" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="GoalDescription" class="form-label fw-bold small text-uppercase" style="color: var(--muted); opacity: 0.8;">Description</label>
                            <textarea asp-for="GoalDescription" class="form-control" rows="4" style="background: var(--bg); color: var(--ink); border-color: var(--rule);"></textarea>
                            <span asp-validation-for="GoalDescription" class="text-danger small"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a asp-action="Index" class="btn btn-light px-4 rounded-pill">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
