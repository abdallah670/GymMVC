@model IEnumerable<GymBLL.ModelVM.Member.FitnessGoalsVM>

@{
    ViewData["Title"] = "Fitness Goals";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0" style="color: var(--ink); font-weight: 700;">Fitness Goals</h1>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 px-4 py-2" 
           style="border-radius: var(--radius); font-weight: 500; box-shadow: var(--shadow-sm);">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="card border-0 shadow-sm" style="border-radius: var(--radius); overflow: hidden; background: var(--tile); border: 1px solid var(--frame) !important;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table text-center align-middle mb-0" style="color: var(--ink); border-color: var(--rule); background: transparent;">
                    <thead style="background: var(--frame);">
                        <tr>
                            <th class="px-4 py-3 border-0 small fw-bold text-uppercase" style="color: var(--ink); opacity: 0.8;">ID</th>
                            <th class="px-4 py-3 border-0 small fw-bold text-uppercase" style="color: var(--ink); opacity: 0.8;">Goal Name</th>
                            <th class="px-4 py-3 border-0 small fw-bold text-uppercase" style="color: var(--ink); opacity: 0.8;">Description</th>
                            <th class="px-4 py-3 border-0 small fw-bold text-uppercase" style="color: var(--ink); opacity: 0.8;">Actions</th>
                        </tr>
                    </thead>
                    <tbody style="background: transparent;">
                        @foreach (var item in Model)
                        {
                            <tr style="border-bottom: 1px solid var(--rule); background: transparent;">
                                <td class="px-4 py-3" style="color: var(--ink); opacity: 0.7;">#@item.Id</td>
                                <td class="px-4 py-3 fw-bold" style="color: var(--ink);">@item.GoalName</td>
                                <td class="px-4 py-3" style="color: var(--ink); opacity: 0.85; font-weight: 500;">@item.GoalDescription</td>
                                <td class="px-4 py-3">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-pill px-3 shadow-sm text-white">
                                            <i class="fas fa-eye me-1"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill px-3 shadow-sm text-white">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-pill px-3 shadow-sm">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
