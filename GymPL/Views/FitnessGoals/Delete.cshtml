@model GymBLL.ModelVM.Member.FitnessGoalsVM

@{
    ViewData["Title"] = "Delete Fitness Goal";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-light rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 mb-0" style="color: var(--ink); font-weight: 700;">Delete Goal</h1>
            <p style="color: var(--muted); opacity: 0.9; margin-bottom: 0;">Are you sure you want to remove this goal?</p>
        </div>
    </div>

    <div class="alert alert-danger d-flex align-items-center mb-4" style="border-radius: var(--radius); border: none;">
        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
        <div>
            <h5 class="alert-heading fw-bold mb-1">Confirm Deletion</h5>
            <p class="mb-0">This action cannot be undone if members are still referencing this goal.</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: var(--radius); background: var(--tile);">
        <div class="card-body p-4 p-md-5">
            <dl class="row mb-5">
                <dt class="col-sm-3 fw-bold small text-uppercase mb-1" style="color: var(--muted); opacity: 0.8;">Goal Name</dt>
                <dd class="col-sm-9 h5 mb-3" style="color: var(--ink); font-weight: 600;">@Model.GoalName</dd>
                <hr class="w-100 opacity-25" style="color: var(--rule);" />
                
                <dt class="col-sm-3 fw-bold small text-uppercase mb-1" style="color: var(--muted); opacity: 0.8;">Description</dt>
                <dd class="col-sm-9" style="color: var(--ink); line-height: 1.6;">@Model.GoalDescription</dd>
            </dl>
            
            <div class="d-flex gap-2 justify-content-end border-top pt-4" style="border-color: var(--rule) !important;">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-5 rounded-pill shadow-sm">
                        <i class="fas fa-trash-alt me-2"></i> Delete Permanently
                    </button>
                    <a asp-action="Index" class="btn btn-light px-4 rounded-pill ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
