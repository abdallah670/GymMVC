<div id="trainer-ai-bubble" class="ai-bubble">
    <i class="fas fa-robot"></i>
</div>

<div id="trainer-ai-window" class="ai-window" style="display: none;">
    <div class="ai-header">
        <div style="display: flex; align-items: center; gap: 0.8rem;">
            <div class="ai-avatar-small">
                <i class="fas fa-robot"></i>
            </div>
            <div>
                <h4 style="margin: 0; font-size: 0.95rem;">MenoPro Trainer AI</h4>
                <small style="opacity: 0.8;">Technical Assistant</small>
            </div>
        </div>
        <button id="close-ai" class="ai-close-btn">&times;</button>
    </div>
    <div id="ai-chat-messages" class="ai-messages">
        <div class="message-ai">
            Hello Trainer! I'm your technical assistant. I can help you analyze member progress, suggest diet/workout adjustments, or explain technical fitness concepts. How can I help?
        </div>
    </div>
    <div class="ai-input-container">
        <input type="text" id="ai-input" placeholder="Ask about this member..." />
        <button id="send-ai-msg" class="ai-send-btn">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>

<style>
    .ai-bubble {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 3.5rem;
        height: 3.5rem;
        background: var(--primary-gradient, linear-gradient(135deg, #4e73df 0%, #224abe 100%));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(34, 74, 190, 0.4);
        z-index: 1000;
        transition: transform 0.2s;
    }
    .ai-bubble:hover { transform: scale(1.1); }

    .ai-window {
        position: fixed;
        bottom: 6rem;
        right: 2rem;
        width: 350px;
        height: 500px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 1.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        z-index: 1001;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .ai-header {
        padding: 1rem 1.2rem;
        background: var(--primary-gradient);
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .ai-messages {
        flex: 1;
        padding: 1.2rem;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .message-ai {
        background: #f1f3f9;
        padding: 0.8rem 1rem;
        border-radius: 1rem 1rem 1rem 0;
        font-size: 0.9rem;
        max-width: 85%;
        color: #333;
    }

    .message-user {
        background: #4e73df;
        color: white;
        padding: 0.8rem 1rem;
        border-radius: 1rem 1rem 0 1rem;
        font-size: 0.9rem;
        max-width: 85%;
        align-self: flex-end;
    }

    .ai-input-container {
        padding: 1rem;
        display: flex;
        gap: 0.5rem;
        border-top: 1px solid #eee;
    }

    .ai-input-container input {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 2rem;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        outline: none;
    }

    .ai-send-btn {
        background: #4e73df;
        color: white;
        border: none;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        cursor: pointer;
    }

    .ai-close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        opacity: 0.8;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const bubble = document.getElementById('trainer-ai-bubble');
        const window = document.getElementById('trainer-ai-window');
        const closeBtn = document.getElementById('close-ai');
        const sendBtn = document.getElementById('send-ai-msg');
        const input = document.getElementById('ai-input');
        const messages = document.getElementById('ai-chat-messages');

        bubble.onclick = () => window.style.display = window.style.display === 'none' ? 'flex' : 'none';
        closeBtn.onclick = () => window.style.display = 'none';

        async function sendMessage() {
            const msg = input.value.trim();
            if (!msg) return;

            input.value = '';
            messages.innerHTML += `<div class="message-user">${msg}</div>`;
            messages.scrollTop = messages.scrollHeight;

            try {
                const response = await fetch('/AI/SendMessage', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: msg })
                });
                const data = await response.json();
                messages.innerHTML += `<div class="message-ai">${data.reply}</div>`;
                messages.scrollTop = messages.scrollHeight;
            } catch (error) {
                console.error('AI Error:', error);
            }
        }

        sendBtn.onclick = sendMessage;
        input.onkeypress = (e) => { if (e.key === 'Enter') sendMessage(); };
    });
</script>
