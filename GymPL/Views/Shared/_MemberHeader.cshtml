@using System.Security.Claims
@if (User.Identity.IsAuthenticated)
{
    <header class="member-header">
        <div class="bar">
            <div class="brand">
                <h1 class="logo">Meno<span>Pro</span></h1>
            </div>

            <nav>
                <ul>
                    <li><a asp-controller="Member" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li><a asp-controller="Member" asp-action="GetAssignedWorkoutPlan"><i class="fas fa-dumbbell"></i> My Workout</a></li>
                    <li><a asp-controller="Member" asp-action="GetAssignedDietPlan"><i class="fas fa-apple-alt"></i> My Diet</a></li>
                    <li><a asp-controller="MealLog" asp-action="Index"><i class="fas fa-utensils"></i> Meal Logs</a></li>
                    <li><a asp-controller="WorkoutLog" asp-action="History"><i class="fas fa-history"></i> Workout History</a></li>
                    
                    <!-- Notification Bell -->
                    <partial name="_NotificationsPartial" />
                    <partial name="_ChatPartial" />

                    <li>
                        <button class="theme-toggle-btn theme-btn" title="Toggle Light/Dark Mode">
                            <i class="fas fa-moon"></i>
                        </button>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <!-- Show profile picture if available -->
                            @if (User.HasClaim(c => c.Type == "ProfilePicture"))
                            {
                                <img src="@User.FindFirst("ProfilePicture").Value" class="profile-img-sm rounded-circle" style="width: 30px; height: 30px; object-fit: cover;" alt="@User.Identity.Name" />
                            }
                          else{
                                        
                                <img src="~/uploads/profiles/default-profile.png" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            <span class="user-name ms-2">@User.Identity.Name</span>
                        </a>
                        
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                             <li>
                                <div class="px-3 py-2">
                                     <div class="d-flex align-items-center">
                                       @if (User.HasClaim(c => c.Type == "ProfilePicture"))
                                        {
                                            <img src="@User.FindFirst("ProfilePicture").Value" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                        }
                                       else{
                                        
                                            <img src="~/uploads/profiles/default-profile.png" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                        }
                                        <div>
                                            <div class="fw-bold">@User.Identity.Name</div>
                                            <div class="small text-muted">@User.FindFirst(ClaimTypes.Email)?.Value</div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Member" asp-action="Profile">
                                    <i class="fas fa-user me-2 text-primary"></i>My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="fas fa-key me-2 text-warning"></i>Change Password
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
}
