@if (User.Identity.IsAuthenticated)
{
    <header class="trainer-header">
        <div class="bar">
            <div class="brand">
                <h1 class="logo">Meno<span>Pro</span> <small class="role-badge">Trainer</small></h1>
            </div>

            <nav>
                <ul>
                    <li><a href="/Trainer/Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li><a href="/Trainer/MyMembers"><i class="fas fa-users"></i> My Members</a></li>
                    @* <li><a href="/Trainer/Schedule"><i class="fas fa-calendar-alt"></i> Schedule</a></li> *@
                    <li><a href="/Trainer/Workouts"><i class="fas fa-clipboard-list"></i> Workout Plans</a></li>
                    <li><a href="/Trainer/Nutrition"><i class="fas fa-apple-alt"></i> Nutrition Plans</a></li>
                    <!-- User Dropdown -->
                    <li class="dropdown">
                        <a href="#" class="user-dropdown" id="userDropdownToggle">
                            <!-- Show profile picture if available -->
                            @if (!string.IsNullOrEmpty(User.FindFirst("ProfilePicture").Value))
                            {
                                <img src="@User.FindFirst("ProfilePicture").Value" class="profile-img-sm" alt="@User.Identity.Name" />
                            }
                            else
                            {
                                <i class="fas fa-user-circle"></i>
                            }
                            <span class="user-name">@User.Identity.Name</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu" id="userDropdownMenu">
                            <div class="dropdown-header">
                                <div class="user-info">
                                    @if (!string.IsNullOrEmpty(User.FindFirst("ProfilePicture").Value))
                                    {
                                        <img src="@User.FindFirst("ProfilePicture").Value" class="profile-img-sm" alt="@User.Identity.Name" />
                                    }
                                    <div>
                                        <strong>@User.Identity.Name</strong>
                                        <small>@User.FindFirst("Email").Value</small>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Profile", "Trainer")" class="dropdown-item">
                                <i class="fas fa-user me-2"></i>My Profile
                            </a>
                            <a href="@Url.Action("Settings", "Account")" class="dropdown-item">
                                <i class="fas fa-cog me-2"></i>Settings
                            </a>
                            <a href="@Url.Action("ChangePassword", "Account")" class="dropdown-item">
                                <i class="fas fa-key me-2"></i>Change Password
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Help", "Home")" class="dropdown-item">
                                <i class="fas fa-question-circle me-2"></i>Help & Support
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout", "Account")" class="dropdown-item logout-item">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
}
