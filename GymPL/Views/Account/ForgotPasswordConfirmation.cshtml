@{
    ViewData["Title"] = "Reset Link Sent";
  
}

<section style="max-width:820px;margin:48px auto;padding:32px;background:#fff7ed;border-radius:12px;box-shadow:0 6px 20px rgba(20,20,20,0.04);font-family:Segoe UI, Roboto, Arial, sans-serif;color:#0f172a;border:1px solid #f1e7dc;">
    <header style="text-align:center;padding:8px 0 6px;">
        <div style="display:inline-flex;align-items:center;gap:12px;padding:12px 18px;border-radius:12px;background:linear-gradient(90deg,#f97316,#f59e0b);color:#fff;">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="none">
                <path d="M12 2a10 10 0 1 0 .001 20.001A10 10 0 0 0 12 2z" fill="white" opacity="0.08"/>
                <path d="M12 8v5l3 3" stroke="#fff" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <div style="text-align:left;">
                <h1 style="margin:0;font-size:18px;font-weight:700;">Check your email</h1>
                <div style="font-size:13px;opacity:.95;">We sent a password reset link</div>
            </div>
        </div>
    </header>

    <div style="padding:20px 6px;">
        <p style="font-size:15px;color:#0f172a;margin:12px 0 18px;">
            If an account with the email you provided exists, a password reset link has been sent. Check your inbox (and spam) for instructions. The link will expire in 2 hours.
        </p>

        <div style="display:flex;gap:12px;align-items:center;flex-wrap:wrap;">
            <a href="@Url.Action("ForgotPassword","Account")" style="padding:10px 18px;border-radius:10px;background:#fb923c;color:#fff;font-weight:600;text-decoration:none;box-shadow:0 8px 24px rgba(251,146,60,0.12);">
                Resend link
            </a>
            <a href="@Url.Action("Login","Account")" style="padding:10px 18px;border-radius:10px;background:transparent;border:1px solid #f59e0b;color:#92400e;font-weight:600;text-decoration:none;">
                Back to Sign in
            </a>
        </div>

        <p style="font-size:13px;color:#475569;margin-top:16px;">
            Still not receiving the email? Contact <a href="mailto:support@menopro.com">support@menopro.com</a>.
        </p>
    </div>

    <footer style="text-align:center;margin-top:18px;color:#92400e;font-size:12px;">
        &copy; @DateTime.Now.Year MenoPro Gym
    </footer>
</section>