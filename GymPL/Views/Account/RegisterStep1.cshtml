@model GymBLL.ModelVM.TempRegistrationVM

@{
    ViewData["Title"] = "Register - Step 1";
}

<div class="login-container">
    <div class="login-card">
        <div class="gym-icon">
             <i class="fas fa-user-plus"></i>
        </div>

        <div class="login-header">
            <h1 class="login-title">Join MenoPro</h1>
            <p class="login-subtitle">Start your fitness journey today. Enter your email to begin.</p>
        </div>

        <form asp-action="RegisterStep1" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-1"></i>Email Address
                </label>
                <div class="input-with-icon">
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-control-custom" placeholder="Enter your email address" />
                </div>
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <button type="submit" class="btn-login">
                Next <i class="fas fa-arrow-right ms-2"></i>
            </button>
        </form>

        <div class="login-footer">
            <p>Already have an account?</p>
            <a href="@Url.Action("Login", "Account")" class="join-link">
                Sign In
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
