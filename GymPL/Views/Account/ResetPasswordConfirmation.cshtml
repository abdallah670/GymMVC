@{
    ViewData["Title"] = "Password Reset Successful";
   
}

<section style="max-width:820px;margin:48px auto;padding:32px;background:#f8fafc;border-radius:12px;box-shadow:0 6px 20px rgba(16,24,40,0.06);font-family:Segoe UI, Roboto, Arial, sans-serif;color:#0f172a;">
    <header style="text-align:center;padding:18px 0 8px;">
        <div style="display:inline-flex;align-items:center;gap:12px;padding:14px 22px;border-radius:12px;background:linear-gradient(90deg,#06b6d4,#3b82f6);box-shadow:0 6px 20px rgba(59,130,246,0.18);">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" style="flex:0 0 28px;">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z" fill="white" opacity="0.08"/>
                <path d="M12 7a5 5 0 1 0 .001 10.001A5 5 0 0 0 12 7zm0 2a3 3 0 1 1 0 6 3 3 0 0 1 0-6z" fill="#fff"/>
            </svg>
            <div style="text-align:left;color:#fff;">
                <h1 style="margin:0;font-size:18px;font-weight:700;">Password Reset Complete</h1>
                <div style="font-size:13px;opacity:.95;">Your password has been updated</div>
            </div>
        </div>
    </header>

    <div style="padding:22px 8px 4px;">
        <p style="font-size:15px;color:#0f172a;margin:12px 0 18px;">
            Your password was successfully reset. You can now sign in using your new password.
        </p>

        <div style="text-align:center;margin:22px 0;">
            <a href="@Url.Action("Login","Account")" style="display:inline-block;padding:12px 26px;border-radius:10px;background:#0ea5e9;color:#fff;font-weight:600;text-decoration:none;box-shadow:0 8px 24px rgba(14,165,233,0.18);">
                Sign in to your account
            </a>
        </div>

        <p style="font-size:13px;color:#475569;margin-top:12px;">
            If you did not perform this action, contact support immediately at <a href="mailto:support@menopro.com">support@menopro.com</a>.
        </p>
    </div>

    <footer style="text-align:center;margin-top:18px;color:#94a3b8;font-size:12px;">
        &copy; @DateTime.Now.Year MenoPro Gym
    </footer>
</section>