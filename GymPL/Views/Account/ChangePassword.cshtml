@using GymBLL.ModelVM.AccountVM
@model PasswordVM
@{
    ViewData["Title"] = "Change Password";
}

<style>
    /* Custom Card Styles */
    .password-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    
    .password-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-bottom: none;
        padding: 1.5rem;
    }
    
    .password-card .card-body {
        padding: 2rem;
        background: #f8f9fa;
    }
    
    /* Form Styles */
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s;
        background: white;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        background: white;
    }
    
    .form-control.is-invalid {
        border-color: #dc3545;
        background-image: none;
    }
    
    .form-control.is-valid {
        border-color: #28a745;
    }
    
    /* Input Group Styles */
    .input-group {
        border-radius: 8px;
        overflow: hidden;
    }
    
    .input-group .form-control {
        border-right: none;
    }
    
    .input-group .btn-outline-secondary {
        border: 2px solid #e9ecef;
        border-left: none;
        background: white;
        color: #6c757d;
        transition: all 0.3s;
    }
    
    .input-group .btn-outline-secondary:hover {
        background: #f8f9fa;
        border-color: #ced4da;
        color: #495057;
    }
    
    /* Validation Styles */
    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }
    
    .field-validation-error {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.25rem;
    }
    
    .field-validation-error::before {
        content: "⚠";
        font-size: 0.9rem;
    }
    
    /* Password Strength Indicator */
    .password-strength {
        margin-top: 0.75rem;
    }
    
    .password-strength .progress {
        border-radius: 10px;
        background: #e9ecef;
        overflow: hidden;
        height: 8px !important;
    }
    
    .password-strength .progress-bar {
        transition: width 0.5s ease, background-color 0.5s ease;
        border-radius: 10px;
    }
    
    #passwordStrengthText {
        font-size: 0.85rem;
        display: block;
        margin-top: 0.25rem;
        font-weight: 500;
    }
    
    /* Password Match Indicator */
    #passwordMatchText {
        font-size: 0.85rem;
        display: block;
        margin-top: 0.25rem;
        font-weight: 500;
    }
    
    /* Requirements Alert */
    .requirements-alert {
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 1.25rem;
        margin: 1.5rem 0;
    }
    
    .requirements-alert .alert-heading {
        color: white;
        font-size: 1rem;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }
    
    .requirements-alert ul {
        margin-bottom: 0;
        padding-left: 1.5rem;
    }
    
    .requirements-alert li {
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
        opacity: 0.95;
    }
    
    /* Submit Button */
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
    }
    
    .btn-primary:active {
        transform: translateY(0);
    }
    
    .btn-primary:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }
    
    /* Forgot Password Link */
    .btn-link {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }
    
    .btn-link:hover {
        color: #764ba2;
        text-decoration: underline;
    }
    
    /* History Card */
    .history-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        background: white;
        margin-top: 2rem;
    }
    
    .history-card .card-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        color: white;
        padding: 1rem 1.5rem;
        font-size: 0.95rem;
    }
    
    .history-card .card-body {
        padding: 1.5rem;
        background: white;
    }
    
    /* Responsive Design */
    @@media (max-width: 576px) {
        .password-card .card-body {
            padding: 1.5rem;
        }
        
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
    
    /* Animation for success/error messages */
    .alert {
        border: none;
        border-radius: 10px;
        animation: slideDown 0.3s ease;
    }
    
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Focus animation for inputs */
    .form-control:focus {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
        }
        70% {
            box-shadow: 0 0 0 6px rgba(102, 126, 234, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(102, 126, 234, 0);
        }
    }
    
    /* Password visibility toggle button animation */
    .btn-outline-secondary i {
        transition: transform 0.3s ease;
    }
    
    .btn-outline-secondary:hover i {
        transform: scale(1.1);
    }
    
    /* Loading spinner animation */
    .fa-spinner {
        animation: spin 1s linear infinite;
    }
    
    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    /* Password strength colors */
    .bg-danger { background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%) !important; }
    .bg-warning { background: linear-gradient(90deg, #ffd166 0%, #ffdf8e 100%) !important; }
    .bg-success { background: linear-gradient(90deg, #06d6a0 0%, #4df0c5 100%) !important; }
    
    /* Match indicator colors */
    .text-success { color: #06d6a0 !important; font-weight: 600; }
    .text-danger { color: #ff6b6b !important; font-weight: 600; }
    
    /* Form text spacing */
    .form-text {
        margin-top: 0.5rem;
        display: block;
    }
    /* Add this to your existing style section */
    .highlight {
        animation: highlight-pulse 1s ease;
    }

    @@keyframes highlight-pulse {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
        }

        50% {
            box-shadow: 0 0 0 10px rgba(102, 126, 234, 0);
        }
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Main Card -->
            <div class="card password-card">
                <div class="card-header text-center">
                    <h2 class="mb-0"><i class="fas fa-key me-2"></i>Change Password</h2>
                    <p class="mb-0 mt-2 opacity-75">Secure your account with a new password</p>
                </div>
                <div class="card-body">
                    <!-- Display success/error messages -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle me-3 fs-4"></i>
                                <div class="flex-grow-1">@TempData["Success"]</div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                                <div class="flex-grow-1">@TempData["Error"]</div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        </div>
                    }

                    <!-- ASP.NET Form -->
                    <form asp-action="ChangePassword" asp-controller="Account" method="post" id="changePasswordForm">
                        @Html.AntiForgeryToken()
                        
                        <!-- Display validation summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle me-3"></i>
                                <div class="flex-grow-1">
                                    <h6 class="alert-heading mb-2">Please fix the following errors:</h6>
                                    <ul class="mb-0">
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Current Password -->
                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>Current Password
                            </label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" 
                                       type="password" 
                                       class="form-control" 
                                       id="currentPassword"
                                       placeholder="Enter your current password" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        onclick="togglePassword('currentPassword')"
                                        title="Show/Hide password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>New Password
                            </label>
                            <div class="input-group">
                                <input asp-for="NewPassword" 
                                       type="password" 
                                       class="form-control" 
                                       id="newPassword"
                                       placeholder="Create a strong new password" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        onclick="togglePassword('newPassword')"
                                        title="Show/Hide password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="password-strength mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small class="text-muted">Password Strength</small>
                                    <small class="text-muted" id="passwordScore">0%</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" id="passwordStrengthBar" style="width: 0%;"></div>
                                </div>
                                <small class="text-muted" id="passwordStrengthText"></small>
                            </div>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-redo me-2"></i>Confirm New Password
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" 
                                       type="password" 
                                       class="form-control" 
                                       id="confirmPassword"
                                       placeholder="Confirm your new password" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        onclick="togglePassword('confirmPassword')"
                                        title="Show/Hide password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="mt-2">
                                <small id="passwordMatchText" class="d-flex align-items-center">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <span>Passwords must match</span>
                                </small>
                            </div>
                        </div>

                        <!-- Password Requirements -->
                        <div class="alert requirements-alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-shield-alt me-2"></i>Password Requirements
                            </h6>
                                <li>Cannot be same as previous passwords</li>
                            </ul>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Change Password
                            </button>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("ForgotPassword", "Account")" class="btn-link">
                                    <i class="fas fa-question-circle me-1"></i>Forgot your password?
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- History Card -->
            <div class="card history-card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-history me-2"></i>Password Security</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-primary p-3 me-3">
                                    <i class="fas fa-lock text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Last Changed</h6>
                                    <p class="mb-0 text-muted">@User.FindFirst("UpdatedAt")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-success p-3 me-3">
                                    <i class="fas fa-shield-alt text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Security Level</h6>
                                    <p class="mb-0 text-muted">Strong password required</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-3">
                    <p class="text-muted small mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        For security reasons, you cannot reuse any of your last 3 passwords.
                        Consider using a password manager to generate and store secure passwords.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

