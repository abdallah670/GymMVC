@model GymBLL.ModelVM.Nutrition.DietPlanVM

@{
    ViewData["Title"] = "Diet Plan Details";
    var returnPage = Context.Request.Query["page"].FirstOrDefault() ?? "1";
    var returnUrl = Context.Request.Query["returnUrl"].FirstOrDefault();
    // Determine the back URL
    string backUrl;


    if (!string.IsNullOrEmpty(returnUrl))
    {
        // Use the provided returnUrl
        backUrl = returnUrl;
    }
    else
    {
        // Default: Go back to Index with page number
        backUrl = Url.Action("Index", new { page = returnPage });
    }
}
<div class="plan-details-container">
    <div class="mb-4">
        <a href="@backUrl" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back 
        </a>
    </div>

    <!-- Header -->
    <div class="plan-header plan-header-diet">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h2 class="mb-1">
                    <i class="fas fa-utensils"></i> @Model.Name
                </h2>
                <p class="mb-0 opacity-75">
                    <i class="fas fa-fire"></i> @Model.TotalCalories cal/day | 
                    <i class="fas fa-leaf"></i> @Model.DietType |
                    <i class="fas fa-calendar-week"></i> @Model.DurationDays days
                </p>
            </div>
            <div>
                @if (Model.IsActive)
                {
                    <span class="plan-status-badge">
                        <i class="fas fa-check-circle"></i> Active
                    </span>
                }
                else
                {
                    <span class="plan-status-badge plan-status-badge-inactive">
                        <i class="fas fa-times-circle"></i> Inactive
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Description -->
    <div class="plan-section">
        <h4 class="text-ink mb-3">
            <i class="fas fa-info-circle"></i> Description
        </h4>
        <p class="text-muted mb-0 lh-lg">
            @(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)
        </p>
    </div>

    <!-- Plan Info -->
    <div class="plan-section">
        <h4 class="text-ink mb-3">
            <i class="fas fa-clipboard-list"></i> Plan Details
        </h4>
        <div class="plan-info-grid">
            <div class="plan-info-item">
                <div class="plan-info-value text-primary">@Model.TotalCalories</div>
                <div class="plan-info-label">Daily Calories</div>
            </div>
            <div class="plan-info-item">
                <div class="plan-info-value text-info">@Model.DietType</div>
                <div class="plan-info-label">Diet Type</div>
            </div>
            <div class="plan-info-item">
                <div class="plan-info-value text-success">@Model.DurationDays</div>
                <div class="plan-info-label">Days</div>
            </div>
        </div>
    </div>

    <!-- Meals List -->
    <div class="plan-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-ink m-0">
                <i class="fas fa-carrot"></i> Meals
            </h4>
            <a asp-controller="DietPlanItem"
               asp-action="Create"
               asp-route-dietPlanId="@Model.Id"
               asp-route-returnUrl="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })"
               class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> Add Meal
            </a>
        </div>

        @if (Model.DietPlanItemsVM != null && Model.DietPlanItemsVM.Any())
        {
            var groupedMeals = Model.DietPlanItemsVM.OrderBy(m => m.DayNumber).GroupBy(m => m.DayNumber).ToList();
            var firstDay = groupedMeals.FirstOrDefault();
            var remainingDays = groupedMeals.Skip(1).ToList();

            if (firstDay != null)
            {
                <div class="plan-item-group">
                    <h5 class="text-info mb-3 border-bottom pb-2">
                        Day @firstDay.Key
                    </h5>
                    <div class="d-grid gap-3">
                        @foreach (var meal in firstDay.OrderBy(m => m.MealType == "Breakfast" ? 1 : m.MealType == "Lunch" ? 2 : m.MealType == "Dinner" ? 3 : 4))
                        {
                            <div class="plan-item-card">
                                <div class="plan-item-header">
                                    <div class="flex-grow-1">
                                        <div class="text-muted small text-uppercase fw-bold mb-1">
                                            @meal.MealType
                                        </div>
                                        <h6 class="mb-1 fs-5">@meal.MealName</h6>
                                        <div class="plan-item-meta">
                                            <span><i class="fas fa-fire me-1"></i> @meal.Calories cal</span>
                                            @if (!string.IsNullOrEmpty(meal.ProteinMacros)) { <span><i class="fas fa-drumstick-bite me-1"></i> @meal.ProteinMacros P</span> }
                                            @if (!string.IsNullOrEmpty(meal.CarbMacros)) { <span><i class="fas fa-bread-slice me-1"></i> @meal.CarbMacros C</span> }
                                            @if (!string.IsNullOrEmpty(meal.FatMacros)) { <span><i class="fas fa-cheese me-1"></i> @meal.FatMacros F</span> }
                                        </div>
                                    </div>
                                    <div class="plan-item-actions">
                                        <a asp-controller="DietPlanItem"
                                           asp-action="Edit"
                                           asp-route-id="@meal.Id"
                                           asp-route-returnUrl="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })"
                                           class="btn btn-sm btn-outline-primary" title="Edit Meal">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-controller="DietPlanItem"
                                              asp-action="Delete"
                                              asp-route-id="@meal.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this meal?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="returnUrl" value="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Meal">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(meal.Ingredients))
                                {
                                    <div class="mt-2 small text-muted">
                                        <strong>Ingredients:</strong> @meal.Ingredients
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(meal.Notes))
                                {
                                    <div class="mt-1 small text-muted fst-italic">
                                        Note: @meal.Notes
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            if (remainingDays.Any())
            {
                 <button type="button" 
                         class="btn btn-outline-primary w-100 mb-4" 
                         onclick="toggleRemainingDays()">
                    <i class="fas fa-chevron-down me-2" id="toggle-icon"></i>
                    <span id="toggle-text">Show Remaining (@remainingDays.Count) Days</span>
                </button>

                <div id="remaining-days-container" style="display: none;">
                    @foreach (var dayGroup in remainingDays)
                    {
                        <div class="plan-item-group">
                            <h5 class="text-info mb-3 border-bottom pb-2">
                                Day @dayGroup.Key
                            </h5>
                            <div class="d-grid gap-3">
                                @foreach (var meal in dayGroup.OrderBy(m => m.MealType == "Breakfast" ? 1 : m.MealType == "Lunch" ? 2 : m.MealType == "Dinner" ? 3 : 4))
                                {
                                    <div class="plan-item-card">
                                        <div class="plan-item-header">
                                            <div class="flex-grow-1">
                                                <div class="text-muted small text-uppercase fw-bold mb-1">
                                                    @meal.MealType
                                                </div>
                                                <h6 class="mb-1 fs-5">@meal.MealName</h6>
                                                <div class="plan-item-meta">
                                                    <span><i class="fas fa-fire me-1"></i> @meal.Calories cal</span>
                                                    @if (!string.IsNullOrEmpty(meal.ProteinMacros)) { <span><i class="fas fa-drumstick-bite me-1"></i> @meal.ProteinMacros P</span> }
                                                    @if (!string.IsNullOrEmpty(meal.CarbMacros)) { <span><i class="fas fa-bread-slice me-1"></i> @meal.CarbMacros C</span> }
                                                    @if (!string.IsNullOrEmpty(meal.FatMacros)) { <span><i class="fas fa-cheese me-1"></i> @meal.FatMacros F</span> }
                                                </div>
                                            </div>
                                            <div class="plan-item-actions">
                                                <a asp-controller="DietPlanItem"
                                                   asp-action="Edit"
                                                   asp-route-id="@meal.Id"
                                                   asp-route-returnUrl="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })"
                                                   class="btn btn-sm btn-outline-primary" title="Edit Meal">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-controller="DietPlanItem"
                                                      asp-action="Delete"
                                                      asp-route-id="@meal.Id"
                                                      method="post"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Delete this meal?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="returnUrl" value="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Meal">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(meal.Ingredients))
                                        {
                                            <div class="mt-2 small text-muted">
                                                <strong>Ingredients:</strong> @meal.Ingredients
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(meal.Notes))
                                        {
                                            <div class="mt-1 small text-muted fst-italic">
                                                Note: @meal.Notes
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-carrot fa-3x text-muted mb-3"></i>
                <h5 class="text-ink">No Meals Added Yet</h5>
                <p class="text-muted mb-3">Add your first meal to get started.</p>
                <a asp-controller="DietPlanItem"
                   asp-action="Create"
                   asp-route-dietPlanId="@Model.Id"
                   asp-route-returnUrl="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })"
                   class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add First Meal
                </a>
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="plan-actions-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString" asp-route-returnPage="@returnPage" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Edit Plan
        </a>
        <a asp-controller="DietPlanItem"
           asp-action="Create"
           asp-route-dietPlanId="@Model.Id"
           asp-route-returnUrl="@Url.Action("Details", "DietPlan", new { id = Model.Id, page = returnPage })"
           asp-route-returnPage="@returnPage"
           class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add Meal
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
              onsubmit="return confirm('Are you sure you want to delete this diet plan?');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnPage" value="@returnPage" />
            <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-trash me-2"></i>Delete Plan
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/plans.js" asp-append-version="true"></script>
}
