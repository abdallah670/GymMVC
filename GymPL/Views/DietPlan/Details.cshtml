@model GymBLL.ModelVM.Nutrition.DietPlanVM

@{
    ViewData["Title"] = "Diet Plan Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Diet Plan Details</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Name</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Plan Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.</dd>

                <dt class="col-sm-3">Total Calories</dt>
                <dd class="col-sm-9">@Model.TotalCalories kcal</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.DurationDays weeks</dd>

                <dt class="col-sm-3">Macros</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-primary">Protein: @Model.ProteinMacros</span>
                    <span class="badge badge-success">Carbs: @Model.CarbMacros</span>
                    <span class="badge badge-warning">Fats: @Model.FatMacros</span>
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
