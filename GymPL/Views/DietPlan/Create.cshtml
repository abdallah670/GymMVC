@model GymBLL.ModelVM.Nutrition.DietPlanVM

@{
    ViewData["Title"] = "Create Diet Plan";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Create Diet Plan</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Plan Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="DietType" class="control-label"></label>
                        <select asp-for="DietType" class="form-control">
                            <option value="">Select Type</option>
                            <option value="Weight Loss">Weight Loss</option>
                            <option value="Muscle Gain">Muscle Gain</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Keto">Keto</option>
                            <option value="Vegan">Vegan</option>
                        </select>
                        <span asp-validation-for="DietType" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TotalCalories" class="control-label"></label>
                        <input asp-for="TotalCalories" class="form-control" />
                        <span asp-validation-for="TotalCalories" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DurationDays" class="control-label"></label>
                        <input asp-for="DurationDays" class="form-control" />
                        <span asp-validation-for="DurationDays" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="ProteinMacros" class="control-label"></label>
                        <input asp-for="ProteinMacros" class="form-control" placeholder="e.g. 30%" />
                        <span asp-validation-for="ProteinMacros" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CarbMacros" class="control-label"></label>
                        <input asp-for="CarbMacros" class="form-control" placeholder="e.g. 50%" />
                        <span asp-validation-for="CarbMacros" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="FatMacros" class="control-label"></label>
                        <input asp-for="FatMacros" class="form-control" placeholder="e.g. 20%" />
                        <span asp-validation-for="FatMacros" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
