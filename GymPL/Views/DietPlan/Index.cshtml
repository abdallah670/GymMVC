@model GymBLL.ModelVM.PagedResult<GymBLL.ModelVM.Nutrition.DietPlanVM>

@{
    ViewData["Title"] = "Diet Plans";
    var currentUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="container" style="max-width: 1200px; margin: 2rem auto; padding: 0 1rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h2 style="color: var(--ink); margin: 0;">
            <i class="fas fa-utensils"></i> Diet Plans
        </h2>
        <a asp-action="Create" asp-route-page="@Model.PageNumber" class="btn btn-primary" style="display: inline-flex; align-items: center; gap: 0.5rem;">
            <i class="fas fa-plus"></i> Create New Plan
        </a>
    </div>

    

    @if ( !Model.Items.Any())
    {
        <div style="text-align: center; padding: 4rem; background: var(--tile); border-radius: var(--radius); border: 1px solid var(--frame);">
            <i class="fas fa-utensils" style="font-size: 4rem; color: var(--muted); margin-bottom: 1rem;"></i>
            <h3 style="color: var(--ink);">No Diet Plans Yet</h3>
            <p style="color: var(--muted);">Create your first diet plan to get started.</p>
            <a asp-action="Create" asp-route-page="@Model.PageNumber" class="btn btn-primary" style="margin-top: 1rem;">
                <i class="fas fa-plus"></i> Create First Plan
            </a>
        </div>
    }
    else
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 1.5rem;">
            @foreach (var item in Model.Items)
            {
                <div style="background: var(--tile); border-radius: var(--radius); border: 1px solid var(--frame); overflow: hidden; transition: transform 0.2s, box-shadow 0.2s;"
                     onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 8px 25px rgba(0,0,0,0.15)';"
                     onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                    <div style="background: linear-gradient(135deg, var(--info), var(--secondary-color)); padding: 1.25rem; color: var(--accent-ink);">
                        <div style="display: flex; justify-content: space-between; align-items: start;">
                            <h4 style="margin: 0 0 0.5rem 0;">
                                <i class="fas fa-utensils"></i> @item.Name
                            </h4>
                            @if (item.IsActive)
                            {
                                <span style="background: rgba(255,255,255,0.2); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.75rem;">Active</span>
                            }
                            else
                            {
                                <span style="background: rgba(255,0,0,0.3); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.75rem;">Inactive</span>
                            }
                        </div>
                        <div style="display: flex; gap: 1rem; font-size: 0.85rem; opacity: 0.9;">
                            <span><i class="fas fa-fire"></i> @item.TotalCalories cal</span>
                            <span><i class="fas fa-leaf"></i> @item.DietType</span>
                            <span><i class="fas fa-calendar-week"></i> @item.DurationDays days</span>
                        </div>
                    </div>
                    <div style="padding: 1.25rem;">
                        <p style="color: var(--muted); font-size: 0.9rem; margin-bottom: 1rem; min-height: 40px; line-height: 1.4;">
                            @(string.IsNullOrEmpty(item.Description) ? "No description provided." : (item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description))
                        </p>
                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: stretch;">
                            <a asp-action="Details" asp-route-returnUrl="@currentUrl" asp-route-page="@Model.PageNumber" asp-route-id="@item.Id" class="btn btn-info"
                               style="flex: 1; min-width: 80px; display: flex; align-items: center; justify-content: center; padding: 0.375rem 0.75rem;">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" aasp-route-returnUrl="@currentUrl" asp-route-page="@Model.PageNumber" asp-route-id="@item.Id" class="btn btn-secondary"
                               style="flex: 1; min-width: 80px; display: flex; align-items: center; justify-content: center; padding: 0.375rem 0.75rem;">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-returnUrl="@currentUrl" asp-route-page="@Model.PageNumber" asp-route-id="@item.Id" method="post"
                                  style="flex: 1; min-width: 80px; margin: 0;"
                                  onsubmit="return confirm('Are you sure you want to delete this diet plan?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="currentUrl" value="@currentUrl" />
                                <input type="hidden" name="returnPage" value="@Model.PageNumber" />
                                <button type="submit" class="btn btn-danger"
                                        style="width: 100%; height: 100%; padding: 0.375rem 0.75rem; border: 0; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Pagination -->
         @if(Model.TotalPages > 1) {
            <div class="row mt-4">
                <div class="col-12">
                     <nav aria-label="Plans pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
</div>
