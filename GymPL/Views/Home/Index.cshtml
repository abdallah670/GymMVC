@{
    var reviews = ViewBag.Reviews as List<TrainerReviewVM>;
    var reviewscount = (int)ViewBag.ReviewsCount ;
}


    <!-- Hero Section -->
    <!-- Hero Section -->
    <div class="bg-mesh"></div>
    <section class="hero" id="Home">
        <div class="hero-content reveal-on-scroll">
            <div class="hero-badge">Best Fitness Choice 2025</div>
            <h1>Transform Your <span>Body</span>,<br>Transform Your <span>Life</span></h1>
            <p>Experience the ultimate fitness journey with elite coaching, high-tech facilities, and a community that pushes you further.</p>
            <div class="hero-buttons">
                <a href="#membership" class="btn btn-primary"><i class="fas fa-bolt"></i> Start Journey</a>
                <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank" class="btn btn-secondary glass-btn"><i class="fas fa-play-circle"></i> Watch Video</a>
            </div>
            <div class="stats-glass">
                <div class="stat-item">
                    <div class="stat-val counter" data-target="500">0</div>
                    <div class="stat-lab">Active Members</div>
                </div>
                <div class="stat-item">
                    <div class="stat-val counter" data-target="50">0</div>
                    <div class="stat-lab">Daily Classes</div>
                </div>
                <div class="stat-item">
                    <div class="stat-val">1:1</div>
                    <div class="stat-lab">Expert Coaching</div>
                </div>
            </div>
        </div>
        <div class="hero-visual reveal-on-scroll stagger-2">
            <img src="/Images/Cbum.jpg" alt="Elite Fitness" class="main-img">
            <div class="glass-card floating-1">
                <i class="fas fa-heartbeat text-danger"></i>
                <div>
                    <strong>Heart Rate</strong>
                    <span>120 BPM</span>
                </div>
            </div>
            <div class="glass-card floating-2">
                <i class="fas fa-fire text-warning"></i>
                <div>
                    <strong>Calories</strong>
                    <span>850 kcal</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features" id="features">
        <div class="section-header reveal-on-scroll">
            <span class="section-subtitle">Why Choose Us</span>
            <h2 class="section-title">Redefining Fitness Standards</h2>
            <p class="section-description text-muted">We provide everything you need to achieve your fitness goals in a supportive and motivating environment.</p>
        </div>
        <div class="features-grid">
            <div class="feature-card reveal-on-scroll stagger-1">
                <div class="feature-icon"><i class="fas fa-dumbbell"></i></div>
                <h3 class="feature-title">Modern Equipment</h3>
                <p class="feature-description">Access to the latest fitness technology and equipment from leading brands.</p>
            </div>
            <div class="feature-card reveal-on-scroll stagger-2">
                <div class="feature-icon"><i class="fas fa-clipboard-list"></i></div>
                <h3 class="feature-title">Smart Workouts</h3>
                <p class="feature-description">AI-powered personalized workout plans tailored to your specific goals.</p>
            </div>
            <div class="feature-card reveal-on-scroll stagger-3">
                <div class="feature-icon"><i class="fas fa-apple-alt"></i></div>
                <h3 class="feature-title">Nutrition Plans</h3>
                <p class="feature-description">Expert diet planning to complement your workout routine perfectly.</p>
            </div>
            <!-- Added 3 more placeholders for a fuller grid if needed, or stick to 3-4 key ones -->
            <div class="feature-card reveal-on-scroll stagger-4">
                <div class="feature-icon"><i class="fas fa-users"></i></div>
                <h3 class="feature-title">Community</h3>
                <p class="feature-description">Join a community of like-minded individuals who motivate each other.</p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services" id="services">
        <div class="section-header reveal-on-scroll">
             <span class="section-subtitle">Our Expertise</span>
            <h2 class="section-title">Comprehensive Services</h2>
        </div>
        <div class="services-grid">
            <div class="service-card reveal-on-scroll stagger-1">
                <img src="~/Images/image1.jpg" alt="Physical Fitness">
                <div class="service-overlay">
                    <div class="service-content">
                        <h3 class="service-title">Physical Fitness</h3>
                        <p class="service-description">Comprehensive programs for endurance and mobility.</p>
                        <a href="#membership" class="btn btn-sm btn-light">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="service-card reveal-on-scroll stagger-2">
                <img src="~/Images/image2.jpg" alt="Weight Gain">
                <div class="service-overlay">
                    <div class="service-content">
                        <h3 class="service-title">Weight Gain</h3>
                        <p class="service-description">Structured programs for healthy mass building.</p>
                        <a href="#membership" class="btn btn-sm btn-light">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="service-card reveal-on-scroll stagger-3">
                <img src="~/Images/image3.jpg" alt="Strength Training">
                <div class="service-overlay">
                     <div class="service-content">
                        <h3 class="service-title">Strength Training</h3>
                        <p class="service-description">Build raw power with expert guidance.</p>
                        <a href="#membership" class="btn btn-sm btn-light">Book Now</a>
                    </div>
                </div>
            </div>
             <div class="service-card reveal-on-scroll stagger-4">
                <img src="~/Images/image4.jpg" alt="Stamina">
                <div class="service-overlay">
                     <div class="service-content">
                        <h3 class="service-title">Fat Loss</h3>
                        <p class="service-description">High intensity interval training for maximum burn.</p>
                        <a href="#membership" class="btn btn-sm btn-light">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials" id="testimonials">
        <div class="section-header reveal-on-scroll">
             <span class="section-subtitle">Success Stories</span>
            <h2 class="section-title">Member Transformations</h2>
        </div>
        <div class="testimonials-grid">
            @if (reviewscount > 0)
            {
                foreach(var review in reviews)
                {
                   <!-- Existing logic for date calc -->
                   var joinDate = review.JoinDate;
                   var timeSpan = DateTime.Now - joinDate.Value;
                   var years = (int)(timeSpan.TotalDays / 365.25);
                   var months = (int)((timeSpan.TotalDays % 365.25) / 30.44);
                   var memberDurationText = years > 0 ? $"Member for {years} year(s)" : $"Member for {months} month(s)";

                   <div class="testimonial-card reveal-on-scroll">
                       <p class="testimonial-text">@review.Comment</p>
                       <div class="testimonial-author">
                           <div class="author-info">
                               <h4>@review.MemberName</h4>
                               <p>@memberDurationText</p>
                           </div>
                       </div>
                   </div>
                }
            }
             @if (reviewscount == 0)
            {
                 <div class="testimonial-card reveal-on-scroll stagger-1">
                    <p class="testimonial-text">I've tried many gyms before, but MenoPro is different. The trainer actually cares about your progress.</p>
                    <div class="testimonial-author">
                        <div class="author-info">
                            <h4>Jessica Smith</h4>
                            <p>Member for 2 years</p>
                        </div>
                    </div>
                </div>
            }
            @if (reviewscount <= 1)
            {
                 <div class="testimonial-card reveal-on-scroll stagger-2">
                    <p class="testimonial-text">The 24/7 access is a game-changer for my busy schedule. Equipment is always clean.</p>
                    <div class="testimonial-author">
                        <div class="author-info">
                            <h4>Michael Rodriguez</h4>
                            <p>Member for 1 year</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Membership Section -->
    <section class="membership" id="membership">
        <div class="section-header reveal-on-scroll">
            <span class="section-subtitle">Pricing</span>
            <h2 class="section-title">Choose Your Plan</h2>
        </div>
        <div class="pricing-cards">
            @if (ViewBag.Memberships != null && (ViewBag.Memberships as List<GymBLL.ModelVM.Financial.MembershipVM>).Any())
            {
                var memberships = (ViewBag.Memberships as List<GymBLL.ModelVM.Financial.MembershipVM>).OrderBy(m => m.Price).ToList();
                foreach (var plan in memberships)
                {
                    bool isPopular = plan.MembershipType.Contains("Pro", StringComparison.OrdinalIgnoreCase) || 
                                     plan.MembershipType.Contains("Popular", StringComparison.OrdinalIgnoreCase);
                                     
                    <div class="pricing-card @(isPopular ? "popular" : "") reveal-on-scroll">
                        @if (isPopular) { <div class="popular-badge">Most Popular</div> }
                        <h3 class="plan-name">@plan.MembershipType</h3>
                        <div class="plan-price">$@plan.Price.ToString("0")<span>/mo</span></div>
                        <ul class="plan-features">
                            @if (!string.IsNullOrEmpty(plan.Features)) {
                                @foreach (var feature in plan.Features.Split('|')) {
                                    <li><i class="fas fa-check-circle"></i> @feature</li>
                                }
                            } else {
                                <li><i class="fas fa-check-circle"></i> Gym Access</li>
                                <li><i class="fas fa-check-circle"></i> Locker Room</li>
                            }
                        </ul>
                        <a href="/Account/RegisterStep1" class="btn btn-primary w-100 mt-auto">Get Started</a>
                    </div>
                }
            }
            else
            {
                <!-- Fallback Static Cards -->
                 <div class="pricing-card reveal-on-scroll stagger-1">
                    <h3 class="plan-name">Basic</h3>
                    <div class="plan-price">$29<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check-circle"></i> Gym Access</li>
                        <li><i class="fas fa-check-circle"></i> Locker Room</li>
                    </ul>
                    <a href="/Member/Create?membershipId=1" class="btn btn-outline-light w-100 mt-auto">Get Started</a>
                </div>
                <div class="pricing-card popular reveal-on-scroll stagger-2">
                    <div class="popular-badge">Most Popular</div>
                    <h3 class="plan-name">Pro</h3>
                    <div class="plan-price">$49<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check-circle"></i> All Basic Features</li>
                        <li><i class="fas fa-check-circle"></i> Smart Workout Plans</li>
                        <li><i class="fas fa-check-circle"></i> Diet Tracking</li>
                    </ul>
                    <a href="/Member/Create?membershipId=2" class="btn btn-primary w-100 mt-auto">Get Started</a>
                </div>
                <div class="pricing-card reveal-on-scroll stagger-3">
                    <h3 class="plan-name">Elite</h3>
                    <div class="plan-price">$79<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check-circle"></i> All Pro Features</li>
                        <li><i class="fas fa-check-circle"></i> 1-on-1 Coaching</li>
                        <li><i class="fas fa-check-circle"></i> VIP Lounge Access</li>
                    </ul>
                    <a href="/Member/Create?membershipId=3" class="btn btn-outline-light w-100 mt-auto">Get Started</a>
                </div>
            }
        </div>
    </section>
@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}

 
   

  

