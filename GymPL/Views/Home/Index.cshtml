    <!-- Testimonials Section -->
<section class="testimonials" id="testimonials">
        <div class="section-header">
            <h2 class="section-title">Success Stories</h2>
            <p class="section-subtitle">Hear from our members who have transformed their lives with MenoPro.</p>
        </div>
        <div class="testimonials-grid">
            @if (reviewscount > 0)
            {
                foreach(var review in reviews)
                {
                var joinDate = review.JoinDate;
                var timeSpan = DateTime.Now - joinDate.Value;
                var years = (int)(timeSpan.TotalDays / 365.25);
                var months = (int)((timeSpan.TotalDays % 365.25) / 30.44);

                var memberDurationText = "";
                if (years > 0 && months > 0)
                {
                    memberDurationText = $"Member for {years} {(years == 1 ? "year" : "years")} {months} {(months == 1 ? "month" : "months")}";
                }
                else if (years > 0)
                {
                    memberDurationText = $"Member for {years} {(years == 1 ? "year" : "years")}";
                }
                else if (months > 0)
                {
                    memberDurationText = $"Member for {months} {(months == 1 ? "month" : "months")}";
                }
                else
                {
                    memberDurationText = "New member";
                }


                <div class="testimonial-card">
                    <div class="testimonial-author">
                        @if (!string.IsNullOrEmpty(review.MemberPicture))
                        {
                            <img src="@review.MemberPicture"
                                 class="rounded-circle w-100 h-100 object-fit-cover border border-gray-600"
                                 style="min-width: 10px; min-height: 10px; max-width:60px;max-height:60px;"
                                 alt="@review.MemberName">
                        }
                        else
                        {
                            var firstlettername = @review.MemberName[0];
                            var secondlettername = @review.MemberName.Split(" ")[1][0];
                            <div class="author-avatar">@firstlettername+@secondlettername</div>
                        }
                      
                        <div class="author-info">
                            <h4>@review.MemberName</h4>
                            <p>@memberDurationText</p>
                        </div>
                    </div>
                    <p class="testimonial-text">@review.Comment</p>

                    </div>
                
                }
              
            
            }
        @if (reviewscount == 0)
        {
            <div class="testimonial-card">
                <div class="testimonial-author">
                <div class="author-avatar">JS</div>
                <div class="author-info">
                    <h4>Jessica Smith</h4>
                    <p>Member for 2 years</p>
                </div>
            </div>
                <p class="testimonial-text">I've tried many gyms before, but MenoPro is different. The trainer actually cares about your progress and the community is so supportive. I've lost 30 pounds in 4 months!</p>
               
            </div>
        }
        @if (reviewscount == 1 || reviewscount == 0)
        {
            <div class="testimonial-card">
            <div class="testimonial-author">
                <div class="author-avatar">MR</div>
                <div class="author-info">
                    <h4>Michael Rodriguez</h4>
                    <p>Member for 1 year</p>
                </div>
            </div>
                <p class="testimonial-text">The 24/7 access is a game-changer for my busy schedule. I can come in early before work or late at night. The equipment is always clean and well-maintained.</p>
               
            </div>
          }
        @if (reviewscount == 2 || reviewscount == 1)
        {
            <div class="testimonial-card">
                <div class="testimonial-author">
                    <div class="author-avatar">SK</div>
                    <div class="author-info">
                        <h4>Sarah Johnson</h4>
                        <p>Member for 6 months</p>
                    </div>
                </div>
                <p class="testimonial-text">I was nervous about joining a gym, but the trainer made me feel welcome from day one. The small group classes are perfect - I've made friends while getting fit!</p>

            </div>
            
        }
    </div>
</section>

    <!-- Membership Section -->
    <section class="membership" id="membership">
        <div class="section-header">
            <h2 class="section-title">Choose Your Plan</h2>
            <p class="section-subtitle">Flexible membership options designed to fit your lifestyle and budget.</p>
        </div>
        <div class="pricing-cards">
            @if (ViewBag.Memberships != null && (ViewBag.Memberships as List<GymBLL.ModelVM.Financial.MembershipVM>).Any())
            {
                var memberships = (ViewBag.Memberships as List<GymBLL.ModelVM.Financial.MembershipVM>).OrderBy(m => m.Price).ToList();
                foreach (var plan in memberships)
                {
                    bool isPopular = plan.MembershipType.Contains("Pro", StringComparison.OrdinalIgnoreCase) || 
                                     plan.MembershipType.Contains("Popular", StringComparison.OrdinalIgnoreCase);
                                     
                    <div class="pricing-card @(isPopular ? "popular" : "")">
                        @if (isPopular)
                        {
                            <div class="popular-badge">MOST POPULAR</div>
                        }
                        <h3 class="plan-name">@plan.MembershipType</h3>
                        <div class="plan-price">$@plan.Price.ToString("0")<span>/mo</span></div>
                        <ul class="plan-features">
                            @if (!string.IsNullOrEmpty(plan.Features))
                            {
                                @foreach (var feature in plan.Features.Split('|'))
                                {
                                    <li><i class="fas fa-check"></i> @feature</li>
                                }
                            }
                            else
                            {
                                <li><i class="fas fa-check"></i> Gym Access</li>
                                <li><i class="fas fa-check"></i> Expert Coaching</li>
                                <li><i class="fas fa-check"></i> Locker Room</li>
                            }
                        </ul>
                    <a href="/Account/RegisterStep1" class="btn btn-primary" style="width:100%;text-align:center;">
                            Get Started
                        </a>
                    </div>
                }
            }
            else
            {
                <!-- Fallback to static cards if no memberships found in DB -->
                <div class="pricing-card">
                    <h3 class="plan-name">Basic</h3>
                    <div class="plan-price">$29<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> Gym Access</li>
                        <li><i class="fas fa-check"></i> Locker Room</li>
                        <li><i class="fas fa-times"></i> Group Classes</li>
                    </ul>
                    <a href="/Member/Create?membershipId=1" class="btn btn-primary" style="width:100%;text-align:center;">
                        Get Started
                    </a>
                </div>
                <div class="pricing-card popular">
                    <div class="popular-badge">MOST POPULAR</div>
                    <h3 class="plan-name">Pro</h3>
                    <div class="plan-price">$49<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> Gym Access</li>
                        <li><i class="fas fa-check"></i> Professional Coaching</li>
                        <li><i class="fas fa-check"></i> All Classes</li>
                    </ul>
                    <a href="/Member/Create?membershipId=2" class="btn btn-primary" style="width:100%;text-align:center;">
                        Get Started
                    </a>
                </div>
                <div class="pricing-card">
                    <h3 class="plan-name">Elite</h3>
                    <div class="plan-price">$79<span>/mo</span></div>
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> VIP Access</li>
                        <li><i class="fas fa-check"></i> Personal Trainer</li>
                        <li><i class="fas fa-check"></i> Nutrition Plan</li>
                    </ul>
                    <a href="/Member/Create?membershipId=3" class="btn btn-primary" style="width:100%;text-align:center;">
                        Get Started
                    </a>
                </div>
            }
        </div>
    </section>
