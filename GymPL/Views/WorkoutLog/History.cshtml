@model List<GymBLL.ModelVM.Workout.WorkoutLogVM>

@{
    ViewData["Title"] = "Workout History";
}

@section Head {
    <style>
        .history-card {
            background: var(--tile);
            backdrop-filter: blur(10px);
            border: 1px solid var(--frame);
            border-radius: 1rem;
            transition: all 0.3s ease;
        }
        .history-card:hover {
            transform: translateY(-2px);
            background: var(--tile);
            border-color: var(--accent);
            box-shadow: var(--shadow-hover);
        }
        .history-date {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--muted);
        }
        .accordion-button {
            background-color: transparent !important;
            color: var(--ink) !important;
            box-shadow: none !important;
        }
        .accordion-button:not(.collapsed) {
            color: var(--accent) !important;
        }
        .accordion-button::after {
            filter: var(--toggler-filter);
        }
        .accordion-item {
            background-color: transparent;
            border: none;
        }
        .table-dark-transparent {
            --bs-table-bg: transparent;
            --bs-table-color: var(--ink);
            border-color: var(--frame);
        }
    </style>
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold mb-0">Workout <span class="text-primary">History</span></h1>
            <p class="text-muted">Track your consistency and progress over time.</p>
        </div>
        <a asp-controller="Member" asp-action="Dashboard" class="btn btn-outline-primary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Dashboard
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-history fa-4x text-muted opacity-50"></i>
            </div>
            <h4>No workouts logged yet</h4>
            <p class="text-muted">Start a workout plan and log your first session!</p>
            <a asp-controller="Member" asp-action="Dashboard" class="btn btn-primary mt-3">
                Go to Dashboard
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="accordion" id="historyAccordion">
                    @foreach (var log in Model)
                    {
                        <div class="history-card mb-3">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading-@log.Id">
                                    <button class="accordion-button collapsed p-4" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@log.Id" aria-expanded="false" aria-controls="collapse-@log.Id">
                                        <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                            <div>
                                                <div class="history-date mb-1">
                                                    <i class="fas fa-calendar-alt me-2"></i>@log.Date.ToLocalTime().ToString("MMM dd, yyyy â€¢ hh:mm tt")
                                                </div>
                                                <h4 class="mb-0 fw-bold">@log.WorkoutPlanName</h4>
                                            </div>
                                            <div class="text-end d-none d-sm-block">
                                                <span class="badge" style="background: var(--bg); color: var(--ink); border: 1px solid var(--frame);">
                                                    <i class="fas fa-clock me-1 text-primary"></i> @log.DurationMinutes min
                                                </span>
                                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 p-2 ms-2">
                                                    @log.Entries.Count Exercises
                                                </span>
                                            </div>
                                        </div>
                                    </button>
                                </h2>
                                <div id="collapse-@log.Id" class="accordion-collapse collapse" aria-labelledby="heading-@log.Id" data-bs-parent="#historyAccordion">
                                    <div class="accordion-body px-4 pb-4 pt-0">
                                        <hr class="border-secondary opacity-25 my-3">
                                        
                                        @if (!string.IsNullOrEmpty(log.Notes))
                                        {
                                            <div class="alert alert-dark border-0 bg-opacity-50 mb-4">
                                                <i class="fas fa-sticky-note me-2 text-warning"></i> @log.Notes
                                            </div>
                                        }

                                        <div class="table-responsive">
                                            <table class="table table-hover align-middle mb-0" style="color: var(--ink); background: transparent; border-color: var(--rule);">
                                                <thead style="background: var(--frame);">
                                                    <tr style="border-bottom: 1px solid var(--rule);">
                                                        <th class="ps-3 py-2 border-0 small fw-bold text-uppercase opacity-75">Exercise</th>
                                                        <th class="py-2 border-0 small fw-bold text-uppercase opacity-75">Sets</th>
                                                        <th class="py-2 border-0 small fw-bold text-uppercase opacity-75">Reps</th>
                                                        <th class="pe-3 py-2 border-0 small fw-bold text-uppercase opacity-75">Weight</th>
                                                    </tr>
                                                </thead>
                                                <tbody style="background: transparent;">
                                                    @foreach (var entry in log.Entries)
                                                    {
                                                        <tr style="background: transparent; border-bottom: 1px solid var(--rule);">
                                                            <td class="ps-3 fw-bold">@entry.ExerciseName</td>
                                                            <td><span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-2">@entry.SetsPerformed</span></td>
                                                            <td class="font-monospace fw-bold" style="color: var(--info);">@entry.RepsPerformed</td>
                                                            <td class="pe-3 font-monospace fw-bold" style="color: var(--warning);">@entry.WeightLifted</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
