<!-- Assigned Workout Plans Card -->
<div id="workoutPlansCard" class="dashboard-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame);">
    <h3 style="margin-bottom: 1rem; color: var(--ink); display: flex; justify-content: space-between; align-items: center;">
        <span><i class="fas fa-dumbbell"></i> My Workout Plans</span>
    </h3>
    
    <div id="workoutContent">
        <!-- Loading State -->
        <div id="workoutLoading" style="text-align: center; padding: 1.5rem; color: var(--muted);">
            <i class="fas fa-spinner fa-spin"></i>
            <p style="margin-top: 0.5rem; font-size: 0.9rem;">Loading workout plans...</p>
        </div>

        <!-- Workout Plans List (Hidden initially) -->
        <div id="workoutPlansList" style="display: none;">
            <!-- Plans will be dynamically loaded here -->
        </div>

        <!-- No Plans State -->
        <div id="noWorkoutPlans" style="display: none; text-align: center; padding: 2rem; color: var(--muted);">
            <i class="fas fa-clipboard-list" style="font-size: 2rem; margin-bottom: 0.5rem; opacity: 0.5;"></i>
            <p style="font-size: 0.9rem;">No workout plans assigned yet</p>
            <p style="font-size: 0.8rem; margin-top: 0.5rem;">Your trainer will assign a plan soon!</p>
        </div>
    </div>
</div>

<script>
    // Load workout plans on page load
    document.addEventListener('DOMContentLoaded', function() {
        loadWorkoutPlans();
    });

    async function loadWorkoutPlans() {
        try {
            const response = await fetch('@Url.Action("GetAssignedWorkoutPlans", "Member")');
            const data = await response.json();

            document.getElementById('workoutLoading').style.display = 'none';

            if (!data.hasPlans) {
                document.getElementById('noWorkoutPlans').style.display = 'block';
                return;
            }

            // Show plans list
            document.getElementById('workoutPlansList').style.display = 'block';
            
            // Build plans HTML
            const plansHtml = data.plans.map(plan => `
                <div style="padding: 1rem; background: var(--frame); border-radius: var(--radius); margin-bottom: 0.75rem;">
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
                        <div>
                            <div style="font-weight: 600; color: var(--ink); margin-bottom: 0.25rem;">
                                ${plan.workoutPlanName || 'Workout Plan'}
                            </div>
                            <div style="color: var(--muted); font-size: 0.85rem;">
                                <i class="fas fa-calendar"></i> 
                                ${new Date(plan.startDate).toLocaleDateString()} - ${new Date(plan.endDate).toLocaleDateString()}
                            </div>
                        </div>
                        <span style="background: var(--success); color: white; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">
                            Active
                        </span>
                    </div>
                    ${plan.notes ? `<div style="color: var(--muted); font-size: 0.85rem; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid var(--frame);">
                        <i class="fas fa-sticky-note"></i> ${plan.notes}
                    </div>` : ''}
                </div>
            `).join('');

            document.getElementById('workoutPlansList').innerHTML = plansHtml;

        } catch (error) {
            console.error('Error loading workout plans:', error);
            document.getElementById('workoutLoading').innerHTML = '<p style="color: var(--danger); font-size: 0.9rem;">Error loading plans</p>';
        }
    }
</script>
