@model GymPL.ViewModels.MemberProfileDisplayVM

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex align-items-center mb-5">
        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3" >
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img style="width:150px ;height:150px" src="@Model.ProfilePicture"
                     alt="@Model.FullName"
                     class="profile-picture rounded-circle"
                     id="currentProfilePicture">
            }
            else
            {
                <div class="profile-picture-placeholder rounded-circle">
                    <i class="fas fa-user-tie fa-4x"></i>
                </div>
            }
        </div>
        <div>
            <h1 class="h3 fw-bold mb-1">My Profile</h1>
            <p class="text-muted mb-0">Manage your personal information and subscription.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Personal Info Column -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent py-3">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2 text-primary"></i>Personal Details</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Full Name</label>
                            <p class="h5 mb-0">@Model.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Email Address</label>
                            <p class="h5 mb-0">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Member Since</label>
                            <p class="h5 mb-0">@Model.JoinDate.ToString("MMM dd, yyyy")</p>
                        </div>
                         <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Age</label>
                            <p class="h5 mb-0">@Model.Age</p>
                        </div>
                         <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Gender</label>
                            <p class="h5 mb-0">@Model.Gender</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent py-3">
                    <h5 class="mb-0"><i class="fas fa-heartbeat me-2 text-danger"></i>Physical Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4 text-center">
                        <div class="col-4">
                            <div class="p-3 bg-light rounded-3">
                                <i class="fas fa-weight fa-lg text-muted mb-2"></i>
                                <h3 class="fw-bold mb-0">@Model.CurrentWeight <small class="fs-6 text-muted">kg</small></h3>
                                <small class="text-muted">Weight</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-3 bg-light rounded-3">
                                <i class="fas fa-ruler-vertical fa-lg text-muted mb-2"></i>
                                <h3 class="fw-bold mb-0">@Model.Height <small class="fs-6 text-muted">cm</small></h3>
                                <small class="text-muted">Height</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-3 bg-light rounded-3">
                                <i class="fas fa-calculator fa-lg text-muted mb-2"></i>
                                <h3 class="fw-bold mb-0">@Model.BMI.ToString("F1")</h3>
                                <small class="text-muted">BMI</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                         <label class="small text-muted text-uppercase fw-bold">Fitness Goal</label>
                         <p class="lead mb-0">@Model.FitnessGoal</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Subscription & Actions -->
        <div class="col-lg-4">
            <!-- Subscription Card -->
            <div class="card border-0 shadow-lg bg-dark text-white mb-4" style="background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);">
                <div class="card-body p-4">
                    <h5 class="text-uppercase text-muted small mb-3">Membership Status</h5>
                    
                    @if (Model.SubscriptionStatus != null)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="fw-bold text-white mb-0">@Model.SubscriptionStatus.MembershipType</h3>
                            <span class="badge bg-success">@Model.SubscriptionStatus.Status</span>
                        </div>
                        
                        <div class="mb-4">
                             <div class="d-flex justify-content-between text-muted small mb-1">
                                <span>Expires</span>
                                <span>@Model.SubscriptionStatus.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                             <div class="d-flex justify-content-between text-muted small mb-2">
                                <span>Remaining</span>
                                <span class="@(Model.SubscriptionStatus.DaysRemaining < 7 ? "text-warning" : "text-white")">@Model.SubscriptionStatus.DaysRemaining days</span>
                            </div>
                            <div class="progress bg-secondary bg-opacity-25" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"></div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            @if (Model.SubscriptionStatus.IsExpired)
                            {
                                <a asp-controller="Member" asp-action="RenewSubscription" class="btn btn-primary">Renew Membership</a>
                            }
                            <a asp-controller="Member" asp-action="UpgradeSubscription" class="btn btn-outline-light">Upgrade Plan</a>
                        </div>
                    }
                    else
                    {
                         <div class="text-center py-4">
                            <p class="text-muted mb-3">No active subscription found.</p>
                            <a asp-action="Create" class="btn btn-primary w-100">Browse Plans</a>
                        </div>
                    }
                </div>
            </div>

            <!-- Account Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Account Settings</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="EditProfile" class="btn btn-primary w-100">Edit Profile</a>
                    </div>
            </div>
        </div>
    </div>
</div>
