@model List<GymBLL.ModelVM.Financial.PaymentVM>

@{
    ViewData["Title"] = "Payment History";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-gray-800">Payment History</h1>
            <p class="text-muted">View all your past transactions and receipts.</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="paymentsTable">
                        <thead class="thead-light">
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Method</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@payment.Description</td>
                                    <td>
                                        <span class="badge @(payment.PaymentType == "Subscription Renewal" ? "badge-primary" : "badge-info")">
                                            @payment.PaymentType
                                        </span>
                                    </td>
                                    <td class="fw-bold">@payment.Amount.ToString("C")</td>
                                    <td>
                                        <span class="badge @(payment.Status == "Completed" ? "badge-success" : (payment.Status == "Failed" ? "badge-danger" : "badge-warning"))">
                                            @payment.Status
                                        </span>
                                    </td>
                                    <td><i class="fas fa-credit-card me-1 text-muted"></i> @payment.PaymentMethod</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-receipt fa-3x text-gray-300"></i>
                    </div>
                    <h4>No Payments Found</h4>
                    <p class="text-muted">You haven't made any payments yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#paymentsTable').DataTable({
                "order": [[ 0, "desc" ]],
                "pageLength": 10
            });
        });
    </script>
}
