@model List<GymBLL.ModelVM.Financial.PaymentVM>

@{
    ViewData["Title"] = "Payment History";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-gray-800">Payment History</h1>
            <p class="text-muted">View all your past transactions and receipts.</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: var(--radius); overflow: hidden; background: var(--tile); border: 1px solid var(--frame) !important;">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="paymentsTable" style="color: var(--ink); background: transparent; border-color: var(--rule);">
                        <thead style="background: var(--frame);">
                            <tr>
                                <th class="px-4 py-3 border-0 small fw-bold text-uppercase opacity-75">Date</th>
                                <th class="py-3 border-0 small fw-bold text-uppercase opacity-75">Description</th>
                                <th class="py-3 border-0 small fw-bold text-uppercase opacity-75">Type</th>
                                <th class="py-3 border-0 small fw-bold text-uppercase opacity-75">Amount</th>
                                <th class="py-3 border-0 small fw-bold text-uppercase opacity-75">Status</th>
                                <th class="px-4 py-3 border-0 small fw-bold text-uppercase opacity-75">Method</th>
                            </tr>
                        </thead>
                        <tbody style="background: transparent;">
                            @foreach (var payment in Model)
                            {
                                <tr style="background: transparent; border-bottom: 1px solid var(--rule);">
                                    <td class="px-4 py-3">@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td class="py-3">@payment.Description</td>
                                    <td class="py-3">
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3" style="font-weight: 600;">
                                            @payment.PaymentType
                                        </span>
                                    </td>
                                    <td class="py-3 fw-bold" style="color: var(--main-color);">@payment.Amount.ToString("C")</td>
                                    <td class="py-3">
                                        @if (payment.Status == "Completed")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3" style="font-weight: 600;">Active</span>
                                        }
                                        else if (payment.Status == "Failed")
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3" style="font-weight: 600;">Failed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3" style="font-weight: 600;">@payment.Status</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3"><i class="fas fa-credit-card me-1 text-muted"></i> @payment.PaymentMethod</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-receipt fa-3x text-gray-300"></i>
                    </div>
                    <h4>No Payments Found</h4>
                    <p class="text-muted">You haven't made any payments yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#paymentsTable').DataTable({
                "order": [[ 0, "desc" ]],
                "pageLength": 10
            });
        });
    </script>
}
