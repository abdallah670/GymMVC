@{
    ViewData["Title"] = "Today's Workout";
    var assignment = ViewBag.Assignment as GymBLL.ModelVM.Workout.WorkoutAssignmentVM;
    var workoutPlan = ViewBag.WorkoutPlan as GymBLL.ModelVM.Workout.WorkoutPlanVM;
    var currentDay = (int)ViewBag.CurrentDay;
    var maxDays = (int)ViewBag.MaxDays;
    var exercises = ViewBag.Exercises as List<GymBLL.ModelVM.Workout.WorkoutPlanItemVM>;
}

<div class="container" style="max-width: 900px; margin: 2rem auto; padding: 0 1rem;">
    <div style="margin-bottom: 1.5rem;">
        <a href="@Url.Action("MyMembers")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Members
        </a>
    </div>

    <!-- Header -->
    <div style="background: linear-gradient(135deg, var(--main-color), var(--secondary-color)); padding: 2rem; border-radius: var(--radius); margin-bottom: 2rem; color: var(--accent-ink);">
        <div style="display: flex; justify-content: space-between; align-items: start;">
            <div>
                <h2 style="margin-bottom: 0.5rem;">
                    <i class="fas fa-dumbbell"></i> @workoutPlan?.Name
                </h2>
                <p style="opacity: 0.9; margin-bottom: 0.25rem;">
                    <i class="fas fa-signal"></i> @workoutPlan?.Difficulty | <i class="fas fa-bullseye"></i> @workoutPlan?.Goal
                </p>
                <p style="opacity: 0.8; font-size: 0.9rem;">
                    <i class="fas fa-calendar-alt"></i>
                    @assignment?.StartDate.ToString("MMM dd, yyyy") - @assignment?.EndDate.ToString("MMM dd, yyyy")
                </p>
            </div>
            <div style="text-align: right;">
                <div style="background: rgba(255,255,255,0.2); padding: 0.75rem 1.5rem; border-radius: var(--radius);">
                    <div style="font-size: 2rem; font-weight: 700;">Day @currentDay</div>
                    <div style="font-size: 0.85rem; opacity: 0.9;">of @maxDays days</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Day Navigation -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; background: var(--tile); padding: 1rem; border-radius: var(--radius); border: 1px solid var(--frame);">
        @if (currentDay > 1)
        {
            <a href="@Url.Action("ViewTodayWorkout", new { assignmentId = assignment?.Id, day = currentDay - 1 })" class="btn btn-secondary">
                <i class="fas fa-chevron-left"></i> Previous Day
            </a>
        }
        else
        {
            <span></span>
        }

        <div style="display: flex; gap: 0.5rem; align-items: center;">
            <label style="color: var(--muted);">Jump to day:</label>
            <select id="daySelector" onchange="changeDayWorkout(this.value)" style="padding: 0.5rem; border-radius: var(--radius); border: 1px solid var(--frame); background: var(--tile); color: var(--ink);">
                @for (int i = 1; i <= maxDays; i++)
                {
                    <option value="@i" selected="@(i == currentDay)">Day @i</option>
                }
            </select>
        </div>

        @if (currentDay < maxDays)
        {
            <a href="@Url.Action("ViewTodayWorkout", new { assignmentId = assignment?.Id, day = currentDay + 1 })" class="btn btn-secondary">
                Next Day <i class="fas fa-chevron-right"></i>
            </a>
        }
        else
        {
            <span></span>
        }
    </div>

    <!-- Exercises List -->
    <div style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame);">
        <h3 style="color: var(--ink); margin-bottom: 1.5rem;">
            <i class="fas fa-list"></i> Exercises for Day @currentDay
        </h3>

        @if (exercises == null || !exercises.Any())
        {
            <div style="text-align: center; padding: 3rem; color: var(--muted);">
                <i class="fas fa-bed" style="font-size: 3rem; opacity: 0.5; margin-bottom: 1rem;"></i>
                <h4 style="color: var(--ink);">Rest Day</h4>
                <p>No exercises scheduled for this day. Take time to recover!</p>
            </div>
        }
        else
        {
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                @foreach (var exercise in exercises)
                {
                    <div style="background: var(--frame); padding: 1.25rem; border-radius: var(--radius); border-left: 4px solid var(--main-color);">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.75rem;">
                            <h4 style="color: var(--ink); margin: 0; font-size: 1.1rem;">
                                <i class="fas fa-running" style="color: var(--main-color);"></i> @exercise.ExerciseName
                            </h4>
                            @if (!string.IsNullOrEmpty(exercise.VideoUrl))
                            {
                                <a href="@exercise.VideoUrl" target="_blank" class="btn btn-sm btn-primary" style="font-size: 0.8rem; padding: 0.35rem 0.75rem;">
                                    <i class="fas fa-video"></i> Watch Demo
                                </a>
                            }
                        </div>

                        <div style="display: flex; gap: 1.5rem; flex-wrap: wrap; margin-bottom: 0.75rem;">
                            @if (!string.IsNullOrEmpty(exercise.Sets))
                            {
                                <div>
                                    <span style="color: var(--muted); font-size: 0.85rem;">Sets:</span>
                                    <span style="color: var(--ink); font-weight: 600;">@exercise.Sets</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(exercise.Reps))
                            {
                                <div>
                                    <span style="color: var(--muted); font-size: 0.85rem;">Reps:</span>
                                    <span style="color: var(--ink); font-weight: 600;">@exercise.Reps</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(exercise.RestDuration))
                            {
                                <div>
                                    <span style="color: var(--muted); font-size: 0.85rem;">Rest:</span>
                                    <span style="color: var(--ink); font-weight: 600;">@exercise.RestDuration</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(exercise.Equipment))
                            {
                                <div>
                                    <span style="color: var(--muted); font-size: 0.85rem;">Equipment:</span>
                                    <span style="color: var(--ink); font-weight: 600;">@exercise.Equipment</span>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(exercise.Notes))
                        {
                            <div style="background: var(--tile); padding: 0.75rem; border-radius: var(--radius); margin-top: 0.5rem;">
                                <div style="color: var(--muted); font-size: 0.85rem; margin-bottom: 0.25rem;">
                                    <i class="fas fa-info-circle"></i> Notes:
                                </div>
                                <div style="color: var(--ink); font-size: 0.9rem;">@exercise.Notes</div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(assignment?.Notes))
    {
        <div style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame); margin-top: 1.5rem; border-left: 4px solid var(--warning);">
            <h4 style="color: var(--ink); margin-bottom: 0.5rem;">
                <i class="fas fa-sticky-note"></i> Trainer Notes
            </h4>
            <p style="color: var(--muted); margin: 0;">@assignment.Notes</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function changeDayWorkout(day) {
            window.location.href = '@Url.Action("ViewTodayWorkout")?assignmentId=@assignment?.Id&day=' + day;
        }
    </script>
}
