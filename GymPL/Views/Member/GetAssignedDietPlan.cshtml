@model GymBLL.ModelVM.Nutrition.DietPlanAssignmentVM

@{
    ViewData["Title"] = "My Diet Plan";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold"><i class="fas fa-utensils text-success me-2"></i>My Assigned Diet</h1>
        <a asp-action="Dashboard" class="btn btn-outline-success"><i class="fas fa-arrow-left me-2"></i>Dashboard</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-lg mb-4" style="background: var(--tile); color: var(--ink); border: 1px solid var(--frame) !important;">
                <div class="card-body p-4">
                    <h3 class="text-success fw-bold mb-3">@Model.DietPlan?.Name</h3>
                    <p style="color: var(--muted);" class="mb-4">@Model.DietPlan?.Description</p>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-10 rounded border border-secondary border-opacity-25">
                                <small class="d-block text-uppercase mb-1" style="color: var(--muted);">Start Date</small>
                                <span class="h5 mb-0" style="color: var(--ink);">@Model.StartDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-10 rounded border border-secondary border-opacity-25">
                                <small class="d-block text-uppercase mb-1" style="color: var(--muted);">End Date</small>
                                <span class="h5 mb-0" style="color: var(--ink);">@Model.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                             <div class="p-3 rounded" style="background: var(--bg); border: 1px solid var(--frame);">
                                <small class="d-block mb-1" style="color: var(--muted);">Diet Type</small>
                                <span class="fw-bold" style="color: var(--ink);">@Model.DietPlan?.DietType</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                             <div class="p-3 rounded" style="background: var(--bg); border: 1px solid var(--frame);">
                                <small class="d-block mb-1" style="color: var(--muted);">Target Calories</small>
                                <span class="fw-bold" style="color: var(--ink);">@Model.DietPlan?.TotalCalories kcal</span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="DietPlanAssignment" asp-action="TodayMeal" class="btn btn-success btn-lg">
                            <i class="fas fa-utensils me-2"></i>View Today's Meals
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-lg" style="background: var(--tile); color: var(--ink); border: 1px solid var(--frame) !important;">
                <div class="card-header bg-transparent" style="border-bottom: 1px solid var(--frame) !important;">
                    <h5 class="mb-0">Plan Status</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-grow-1">
                            <span style="color: var(--muted);">Status</span>
                        </div>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </div>
                    <hr style="border-color: var(--frame) !important; opacity: 1;">
                    <div class="text-center">
                        <i class="fas fa-apple-alt fa-3x text-success bg-success bg-opacity-10 p-4 rounded-circle mb-3"></i>
                        <p class="small" style="color: var(--muted);">
                            Fueling your body with the right nutrients is key to achieving your goals. Follow your plan to see best results!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
