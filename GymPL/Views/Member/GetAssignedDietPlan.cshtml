@model GymBLL.ModelVM.Nutrition.DietPlanAssignmentVM

@{
    ViewData["Title"] = "My Diet Plan";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold"><i class="fas fa-utensils text-success me-2"></i>My Assigned Diet</h1>
        <a asp-action="Dashboard" class="btn btn-outline-light"><i class="fas fa-arrow-left me-2"></i>Dashboard</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card bg-dark text-white border-secondary shadow-lg mb-4">
                <div class="card-body p-4">
                    <h3 class="text-success fw-bold mb-3">@Model.DietPlan?.Name</h3>
                    <p class="text-muted mb-4">@Model.DietPlan?.Description</p>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-10 rounded border border-secondary border-opacity-25">
                                <small class="text-muted d-block text-uppercase mb-1">Start Date</small>
                                <span class="h5 mb-0">@Model.StartDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-10 rounded border border-secondary border-opacity-25">
                                <small class="text-muted d-block text-uppercase mb-1">End Date</small>
                                <span class="h5 mb-0">@Model.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                             <div class="p-3 bg-light bg-opacity-10 rounded">
                                <small class="text-muted d-block mb-1">Diet Type</small>
                                <span class="fw-bold">@Model.DietPlan?.DietType</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                             <div class="p-3 bg-light bg-opacity-10 rounded">
                                <small class="text-muted d-block mb-1">Target Calories</small>
                                <span class="fw-bold">@Model.DietPlan?.TotalCalories kcal</span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="DietPlanAssignment" asp-action="TodayMeal" class="btn btn-success btn-lg">
                            <i class="fas fa-utensils me-2"></i>View Today's Meals
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0">Plan Status</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-grow-1">
                            <span class="text-muted">Status</span>
                        </div>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </div>
                    <hr class="border-secondary">
                    <div class="text-center">
                        <i class="fas fa-apple-alt fa-3x text-success bg-success bg-opacity-10 p-4 rounded-circle mb-3"></i>
                        <p class="small text-muted">
                            Fueling your body with the right nutrients is key to achieving your goals. Follow your plan to see best results!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
