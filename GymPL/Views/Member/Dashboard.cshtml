
@{
    ViewData["Title"] = "Member Dashboard";
}

<div class="dashboard" style="max-width: var(--maxw); margin: 0 auto; padding: 2rem 1rem;">
    <!-- Welcome Header -->
    <div class="dashboard-header" style="background: linear-gradient(135deg, var(--main-color), var(--secondary-color)); padding: 2rem; border-radius: var(--radius); margin-bottom: 2rem;">
        <div style="display: flex; justify-content: between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <div>
                <h1 style="color: var(--accent-ink); margin-bottom: 0.5rem;">Welcome, John!</h1>
                <p style="color: color-mix(in srgb, var(--accent-ink) 80%, transparent); margin: 0;">Pro Member since January 2024</p>
            </div>
            <div style="text-align: right;">
                <div class="member-id" style="background: color-mix(in srgb, var(--accent-ink) 10%, transparent); padding: 0.5rem 1rem; border-radius: var(--radius); display: inline-block;">
                    <span style="color: var(--accent-ink); font-weight: 600;">Member ID: MP2024001</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
        <div class="stat-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame); text-align: center;">
            <div style="font-size: 2rem; font-weight: 700; color: var(--main-color);">12</div>
            <div style="color: var(--muted);">Workouts This Month</div>
        </div>
        <div class="stat-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame); text-align: center;">
            <div style="font-size: 2rem; font-weight: 700; color: var(--secondary-color);">3</div>
            <div style="color: var(--muted);">PT Sessions Left</div>
        </div>
        <div class="stat-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame); text-align: center;">
            <div style="font-size: 2rem; font-weight: 700; color: var(--tertiary-color);">85%</div>
            <div style="color: var(--muted);">Monthly Goal</div>
        </div>
        <div class="stat-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame); text-align: center;">
            <div style="font-size: 2rem; font-weight: 700; color: var(--success);">30</div>
            <div style="color: var(--muted);">Days Streak</div>
        </div>
    </div>

    <!-- Main Dashboard Grid -->
    <div class="dashboard-grid" style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">

        <!-- Left Column -->
        <div class="left-column" style="display: flex; flex-direction: column; gap: 2rem;">

            <!-- Workout Schedule -->
            <div class="dashboard-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame);">
                <h3 style="margin-bottom: 1rem; color: var(--ink); display: flex; justify-content: between; align-items: center;">
                    <span>Today's Schedule</span>
                    <a href="#" style="color: var(--main-color); text-decoration: none; font-size: 0.9rem;">
                        <i class="fas fa-calendar-plus"></i> Book Class
                    </a>
                </h3>
                <div class="schedule-list" style="display: flex; flex-direction: column; gap: 1rem;">
                    <div class="schedule-item" style="display: flex; justify-content: between; align-items: center; padding: 1rem; background: color-mix(in srgb, var(--tile) 80%, transparent); border-radius: var(--radius);">
                        <div>
                            <div style="font-weight: 600; color: var(--ink);">Strength Training</div>
                            <div style="color: var(--muted); font-size: 0.9rem;">
                                <i class="fas fa-clock"></i> 6:00 PM - 7:00 PM
                            </div>
                        </div>
                        <div class="status" style="background: var(--success); color: white; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">
                            Booked
                        </div>
                    </div>
                    <div class="schedule-item" style="display: flex; justify-content: between; align-items: center; padding: 1rem; background: color-mix(in srgb, var(--tile) 80%, transparent); border-radius: var(--radius);">
                        <div>
                            <div style="font-weight: 600; color: var(--ink);">Personal Training</div>
                            <div style="color: var(--muted); font-size: 0.9rem;">
                                <i class="fas fa-clock"></i> 7:30 PM - 8:30 PM
                            </div>
                        </div>
                        <div class="status" style="background: var(--warning); color: white; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">
                            Confirmed
                        </div>
                    </div>
                </div>
            </div>

            <!-- Progress Tracking -->
            <div class="dashboard-card" style="background: var(--tile); padding: 1.5rem; border-radius: var(--radius); border: 1px solid var(--frame);">
                <h3 style="margin-bottom: 1rem; color: var(--ink);">Progress Tracking</h3>
                <div class="progress-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="progress-item" style="text-align: center;">
                        <div style="font-size: 1.5rem; font-weight: 700; color: var(--main-color);">75 kg</div>
                        <div style="color: var(--muted); font-size: 0.9rem;">Current Weight</div>
                        <div style="color: var(--success); font-size: 0.8rem;">
                            <i class="fas fa-arrow-down"></i> 2 kg this month
                        </div>
                    </div>
                    <div class="progress-item" style="text-align: center;">
                    </a>
                    <a href="#" class="btn btn-secondary" style="text-align: left; justify-content: start;">
                        <i class="fas fa-credit-card"></i> Update Payment
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>