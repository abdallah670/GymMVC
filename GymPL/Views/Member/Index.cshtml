@model GymBLL.ModelVM.PagedResult<GymBLL.ModelVM.User.Member.MemberVM>

@{
    ViewData["Title"] = "Members";
    var viewType = Context.Request.Query["view"].ToString().ToLower();
    if (string.IsNullOrEmpty(viewType)) viewType = "grid";
    var isGridView = viewType == "grid";
}
<body>
    <div class="container-fluid">
        <!-- Header with toggle buttons -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-users mr-2"></i>Members
                    @if (Model.TotalCount > 0)
                    {
                        <small class="text-muted">(@Model.TotalCount total)</small>
                    }
                </h1>
            </div>
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", new { view = "table", page = 1, pageSize = Model.PageSize })"
                   class="btn @(viewType == "table" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fas fa-table mr-1"></i> Table
                </a>
                <a href="@Url.Action("Index", new { view = "grid", page = 1, pageSize = Model.PageSize })"
                   class="btn @(viewType == "grid" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fas fa-th-large mr-1"></i> Grid
                </a>
            </div>
        </div>


        <!-- No Members Message -->
        @if (Model == null || !Model.Items.Any())
        {
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-user-slash fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">No Members Found</h3>
                    <p class="text-muted">There are no members to display.</p>
                </div>
            </div>
        }
        else
        {
            <!-- TABLE VIEW -->
            @if (!isGridView)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Member Directory</h6>
                        <div>
                            <span class="badge badge-info">Page @Model.PageNumber of @Model.TotalPages</span>
                            <span class="badge badge-secondary ml-2">@Model.TotalCount members</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Join Date</th>
                                        <th>Workout Plan</th>
                                        <th>Diet Plan</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ProfilePicture))
                                                    {
                                                        <img src="/uploads/@item.ProfilePicture" alt="@item.FullName"
                                                             class="rounded-circle mr-2" style="width: 36px; height: 36px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mr-2"
                                                             style="width: 36px; height: 36px; font-size: 0.9rem;">
                                                            @item.FullName?.FirstOrDefault()
                                                        </div>
                                                    }
                                                    <span>@item.FullName</span>
                                                </div>
                                            </td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.JoinDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span id="workout-status-@item.Id" class="badge badge-loading">
                                                    <i class="fas fa-spinner fa-spin mr-1"></i> Loading...
                                                </span>
                                            </td>
                                            <td>
                                                <span id="diet-status-@item.Id" class="badge badge-loading">
                                                    <i class="fas fa-spinner fa-spin mr-1"></i> Loading...
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       asp-route-page="@Model.PageNumber"
                                                       asp-route-view="@viewType"
                                                       asp-route-pageSize="@Model.PageSize"
                                                       class="btn btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-view="@viewType" asp-route-page="@Model.PageNumber" asp-route-id="@item.Id"
                                                       class="btn btn-outline-info" title="Details">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-view="@viewType" asp-route-page="@Model.PageNumber" asp-route-id="@item.Id" method="post"
                                                          class="d-inline" onsubmit="return confirm('Are you sure you want to delete this member?');">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            else
            {
                <div class="row">
                    @foreach (var member in Model.Items)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card member-card h-100 shadow-sm border-left-primary">
                                <div class="card-body">
                                    <!-- Profile Section -->
                                    <div class="text-center mb-3">
                                        <div class="member-avatar mx-auto mb-2">
                                            @if (!string.IsNullOrEmpty(member.ProfilePicture))
                                            {
                                                <img src="/uploads/@member.ProfilePicture" alt="@member.FullName"
                                                     class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto"
                                                     style="width: 80px; height: 80px; font-size: 1.5rem;">
                                                    @member.FullName?.FirstOrDefault()
                                                </div>
                                            }
                                        </div>
                                        <h5 class="card-title mb-1">@member.FullName</h5>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-calendar-alt mr-1"></i>
                                            Joined @member.JoinDate.ToString("MMM yyyy")
                                        </p>
                                    </div>

                                    <!-- Contact Info -->
                                    <div class="mb-3">
                                        <p class="mb-1">
                                            <i class="fas fa-envelope text-muted mr-2"></i>
                                            <small>@member.Email</small>
                                        </p>
                                        @if (!string.IsNullOrEmpty(member.Phone))
                                        {
                                            <p class="mb-0">
                                                <i class="fas fa-phone text-muted mr-2"></i>
                                                <small>@member.Phone</small>
                                            </p>
                                        }
                                    </div>

                                    <!-- Goal Card -->
                                    <div class="mb-3">
                                        <div class="card border-0 bg-light">
                                            <div class="card-body p-2 text-center">
                                                <small class="text-muted d-block">Fitness Goal</small>
                                                <span class="font-weight-bold">
                                                    @(member.FitnessGoal?.GoalName ?? "Not Set")
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Plan Status Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="text-center">
                                                <div class="mb-1">
                                                    <i class="fas fa-dumbbell fa-lg text-muted" id="grid-workout-icon-@member.Id"></i>
                                                </div>
                                                <small class="text-muted d-block">Workout</small>
                                                <div id="grid-workout-container-@member.Id">
                                                    <span class="badge badge-light" id="grid-workout-@member.Id">
                                                        Loading...
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center">
                                                <div class="mb-1">
                                                    <i class="fas fa-utensils fa-lg text-muted" id="grid-diet-icon-@member.Id"></i>
                                                </div>
                                                <small class="text-muted d-block">Diet</small>
                                                <div id="grid-diet-container-@member.Id">
                                                    <span class="badge badge-light" id="grid-diet-@member.Id">
                                                        Loading...
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="d-grid gap-2">
                                        <a asp-action="Edit" asp-route-id="@member.Id"
                                           asp-route-page="@Model.PageNumber"
                                           asp-route-view="@viewType"
                                           asp-route-pageSize="@Model.PageSize"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit mr-1"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-page="@Model.PageNumber" asp-route-id="@member.Id"
                                           class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-info-circle mr-1"></i> Details
                                        </a>
                                        <form asp-action="Delete" asp-route-view="@viewType" asp-route-page="@Model.PageNumber" asp-route-id="@member.Id" method="post"
                                              class="d-inline" onsubmit="return confirm('Are you sure you want to delete this member?');">
                                            <button style="width:100%" type="submit" class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- PAGINATION -->
            @if (Model.TotalPages > 1)
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <!-- Page Info -->
                        <div class="text-center mb-2">
                            <small class="text-muted">
                                Showing @((Model.PageNumber - 1) * Model.PageSize + 1) -
                                @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)
                                of @Model.TotalCount members
                            </small>
                        </div>

                        <!-- Pagination Controls -->
                        <nav aria-label="Members pagination">
                            <ul class="pagination justify-content-center">
                                <!-- Previous Page -->
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Members"
                                       asp-route-view="@viewType"
                                       asp-route-page="@(Model.PageNumber - 1)"
                                       asp-route-pageSize="@Model.PageSize">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>

                                <!-- Page Numbers -->
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Members"
                                           asp-route-view="@viewType"
                                           asp-route-page="@i"
                                           asp-route-pageSize="@Model.PageSize">@i</a>
                                    </li>
                                }

                                <!-- Next Page -->
                                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Members"
                                       asp-route-view="@viewType"
                                       asp-route-page="@(Model.PageNumber + 1)"
                                       asp-route-pageSize="@Model.PageSize">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>




                    </div>
                </div>
            }
        }
    </div>
    <script>
        // Track loaded members to avoid duplicates
        const loadedMembers = new Set();

        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== DOMContentLoaded FIRED ===');

            // Load status for all visible members
            @if (Model != null && Model.Items != null && Model.Items.Any())
            {
                        var memberIds = Model.Items.Select(m => m.Id).ToList();
                        var viewTypeStr = viewType.ToString();

                        @: const memberIds = @Html.Raw(Json.Serialize(memberIds));
                        @: const viewType = '@viewTypeStr';
                        @:
                        @: console.log('Loading status for', memberIds.length, 'members in', viewType, 'view');
                        @:
                        @: // Load status for each member with a small delay to prevent overwhelming
                        @: memberIds.forEach((memberId, index) => {
                        @:     setTimeout(() => {
                        @:         if (!loadedMembers.has(memberId)) {
                        @:             loadMemberPlanStatus(memberId, viewType);
                        @:             loadedMembers.add(memberId);
                        @:         }
                        @:     }, index * 50); // Stagger requests by 50ms
                        @: });
            }
        });

        async function loadMemberPlanStatus(memberId, viewType) {
            console.log('Loading plan status for member:', memberId);

            try {
                const response = await fetch('/Member/GetMemberPlanStatus?memberId=' + memberId);

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();
                console.log('Plan status data for', memberId, ':', data);

                // Extract data based on response structure
                let hasWorkout = false;
                let hasDiet = false;
                let isSuccess = true;

                if (data.success !== undefined) {
                    isSuccess = data.success;
                    hasWorkout = data.hasWorkoutPlan || false;
                    hasDiet = data.hasDietPlan || false;
                } else if (data.hasWorkoutPlan !== undefined) {
                    hasWorkout = data.hasWorkoutPlan;
                    hasDiet = data.hasDietPlan;
                } else if (data.Result) {
                    hasWorkout = data.Result.hasWorkout || false;
                    hasDiet = data.Result.hasDiet || false;
                } else if (data.error) {
                    isSuccess = false;
                }

                updatePlanStatusUI(memberId, hasWorkout, hasDiet, viewType, !isSuccess);

            } catch (error) {
                console.error('Error loading plan status for member', memberId, error);
                updatePlanStatusUI(memberId, false, false, viewType, true);
            }
        }

        // Update UI based on plan status
        function updatePlanStatusUI(memberId, hasWorkout, hasDiet, viewType, isError) {
            console.log('Updating UI for member', memberId, 'Workout:', hasWorkout, 'Diet:', hasDiet, 'View:', viewType, 'Error:', isError);

            if (isError) {
                showErrorState(memberId, viewType);
                return;
            }

            if (viewType === 'table') {
                updateTableView(memberId, hasWorkout, hasDiet);
            } else {
                updateGridView(memberId, hasWorkout, hasDiet);
            }
        }

            // Update table view - same style as grid
        function updateTableView(memberId, hasWorkout, hasDiet) {
            const workoutElement = document.getElementById('workout-status-' + memberId);
            const dietElement = document.getElementById('diet-status-' + memberId);

            if (workoutElement) {
                if (hasWorkout) {
                    workoutElement.innerHTML = `
                        <div class="d-flex flex-column align-items-center">
                            <i class="fas fa-check fa-2x text-success mb-1"></i>
                            <a href="/WorkoutPlan/Details/${memberId}" class="btn btn-xs btn-outline-success py-0 px-2">
                                <i class="fas fa-eye me-1"></i> Details
                            </a>
                        </div>
                    `;
                } else {
                    workoutElement.innerHTML = '<i class="fas fa-times fa-2x text-danger"></i>';
                }
            }

            if (dietElement) {
                if (hasDiet) {
                    dietElement.innerHTML = `
                        <div class="d-flex flex-column align-items-center">
                            <i class="fas fa-check fa-2x text-success mb-1"></i>
                            <a href="/DietPlan/Details/${memberId}" class="btn btn-xs btn-outline-success py-0 px-2">
                                <i class="fas fa-eye me-1"></i> Details
                            </a>
                        </div>
                    `;
                } else {
                    dietElement.innerHTML = '<i class="fas fa-times fa-2x text-danger"></i>';
                }
            }
        }

        // Update grid view - big icon + small details button when active
        function updateGridView(memberId, hasWorkout, hasDiet) {
            const workoutContainer = document.getElementById('grid-workout-container-' + memberId);
            const dietContainer = document.getElementById('grid-diet-container-' + memberId);

            if (workoutContainer) {
                if (hasWorkout) {
                    workoutContainer.innerHTML = `
                        <div class="d-flex flex-column align-items-center">
                            <i class="fas fa-check fa-2x text-success mb-1"></i>
                            <a href="/WorkoutPlan/Details/${memberId}" class="btn btn-xs btn-outline-success py-0 px-2">
                                <i class="fas fa-eye me-1"></i> Details
                            </a>
                        </div>
                    `;
                } else {
                    workoutContainer.innerHTML = '<i class="fas fa-times fa-2x text-danger"></i>';
                }
            }

            if (dietContainer) {
                if (hasDiet) {
                    dietContainer.innerHTML = `
                        <div class="d-flex flex-column align-items-center">
                            <i class="fas fa-check fa-2x text-success mb-1"></i>
                            <a href="/DietPlan/Details/${memberId}" class="btn btn-xs btn-outline-success py-0 px-2">
                                <i class="fas fa-eye me-1"></i> Details
                            </a>
                        </div>
                    `;
                } else {
                    dietContainer.innerHTML = '<i class="fas fa-times fa-2x text-danger"></i>';
                }
            }
        }

        // Show error state for both views
        function showErrorState(memberId, viewType) {
            console.log('Showing error state for member:', memberId, 'view:', viewType);

            if (viewType === 'table') {
                // Table view error
                const workoutElement = document.getElementById('workout-cell-' + memberId) ||
                                      document.getElementById('workout-status-' + memberId);
                const dietElement = document.getElementById('diet-cell-' + memberId) ||
                                   document.getElementById('diet-status-' + memberId);

                if (workoutElement) {
                    workoutElement.innerHTML = `
                        <span class="badge badge-danger">
                            <i class="fas fa-exclamation-triangle mr-1"></i> Error
                        </span>
                    `;
                }

                if (dietElement) {
                    dietElement.innerHTML = `
                        <span class="badge badge-danger">
                            <i class="fas fa-exclamation-triangle mr-1"></i> Error
                        </span>
                    `;
                }
            } else {
                // Grid view error
                const workoutContainer = document.getElementById('grid-workout-container-' + memberId);
                const workoutIcon = document.getElementById('grid-workout-icon-' + memberId);
                const dietContainer = document.getElementById('grid-diet-container-' + memberId);
                const dietIcon = document.getElementById('grid-diet-icon-' + memberId);

                if (workoutContainer) {
                    workoutContainer.innerHTML = `
                        <span class="badge badge-danger">
                            <i class="fas fa-exclamation-triangle mr-1"></i> Error
                        </span>
                    `;
                }

                if (workoutIcon) {
                    workoutIcon.className = 'fas fa-dumbbell fa-lg text-danger';
                }

                if (dietContainer) {
                    dietContainer.innerHTML = `
                        <span class="badge badge-danger">
                            <i class="fas fa-exclamation-triangle mr-1"></i> Error
                        </span>
                    `;
                }

                if (dietIcon) {
                    dietIcon.className = 'fas fa-utensils fa-lg text-danger';
                }
            }
        }

        // Optional: Add manual refresh function
        function refreshAllPlanStatuses() {
            console.log('Refreshing all plan statuses');
            loadedMembers.clear();

            @if (Model != null && Model.Items != null && Model.Items.Any())
            {
                        var memberIds = Model.Items.Select(m => m.Id).ToList();
                        var viewTypeStr = viewType.ToString();

                        @: const memberIds = @Html.Raw(Json.Serialize(memberIds));
                        @: const viewType = '@viewTypeStr';
                        @:
                        @: // Reset all to loading state
                        @: memberIds.forEach(memberId => {
                        @:     const elements = document.querySelectorAll(`[id*="${memberId}"]`);
                        @:     elements.forEach(el => {
                        @:         if (el.id.includes('workout') || el.id.includes('diet')) {
                        @:             el.innerHTML = '<span class="badge badge-loading"><i class="fas fa-spinner fa-spin mr-1"></i> Loading...</span>';
                        @:         }
                        @:     });
                        @: });
                        @:
                        @: // Reload all
                        @: setTimeout(() => {
                        @:     memberIds.forEach((memberId, index) => {
                        @:         setTimeout(() => {
                        @:             loadMemberPlanStatus(memberId, viewType);
                        @:         }, index * 100);
                        @:     });
                        @: }, 500);
            }
        }
    </script>
</body>
