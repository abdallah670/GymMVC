@model List<GymBLL.ModelVM.Communication.ConversationVM>

@{
    ViewData["Title"] = "Messages";
    Layout = "_MyLayout";
}

<div class="container-fluid py-4 min-vh-80">
    <div class="row">
        <div class="col-12 col-lg-10 mx-auto">
            <div class="card glass-card shadow-lg border-0">
                <div class="card-header pb-0 bg-transparent border-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="text-white mb-0 font-weight-bolder">Recent Conversations</h4>
                        <p class="text-sm text-white-50">Communicate with your members in real-time</p>
                    </div>
                    <div class="icon icon-shape bg-gradient-primary shadow-primary text-center border-radius-md d-flex align-items-center justify-content-center">
                        <i class="fas fa-inbox text-lg opacity-10"></i>
                    </div>
                </div>
                <div class="card-body px-0 pt-2 pb-2">
                    <div class="list-group list-group-flush">
                        @foreach (var conv in Model)
                        {
                            <a asp-action="Index" asp-route-otherUserId="@conv.OtherUserId" 
                               class="list-group-item list-group-item-action bg-transparent border-0 py-3 mx-2 rounded-3 d-flex align-items-center mb-1 transition-all chat-item">
                                <div class="position-relative">
                                    <div class="avatar avatar-lg rounded-circle me-3 bg-gradient-dark d-flex align-items-center justify-content-center border border-2 border-primary shadow-sm">
                                        @if (!string.IsNullOrEmpty(conv.OtherUserPicture))
                                        {
                                            <img src="@conv.OtherUserPicture" class="rounded-circle w-100 h-100 object-fit-cover shadow" />
                                        }
                                        else
                                        {
                                            <span class="text-white font-weight-bold h5 mb-0">@conv.OtherUserName[0]</span>
                                        }
                                    </div>
                                    @if (conv.UnreadCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-white border-2">
                                            @conv.UnreadCount
                                        </span>
                                    }
                                </div>
                                <div class="flex-grow-1 overflow-hidden ms-2">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h6 class="text-white mb-0 font-weight-bold">@conv.OtherUserName</h6>
                                        <small class="text-white-50">@GymPL.Helper.Helper.GetRelativeTime(conv.LastMessageTimestamp)</small>
                                    </div>
                                    <p class="text-sm text-white-50 mb-0 text-truncate d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(conv.LastMessageAttachmentType))
                                        {
                                            <i class="fas @(conv.LastMessageAttachmentType == "image" ? "fa-image" : conv.LastMessageAttachmentType == "video" ? "fa-video" : "fa-file") me-1 text-primary"></i>
                                            <span class="font-italic text-primary">Sent a @conv.LastMessageAttachmentType</span>
                                        }
                                        else
                                        {
                                            @conv.LastMessage
                                        }
                                    </p>
                                </div>
                                <div class="ms-3 text-white-50 opacity-0 chat-arrow transition-all">
                                    <i class="fas fa-chevron-right text-xs"></i>
                                </div>
                            </a>
                        }

                        @if (!Model.Any())
                        {
                            <div class="text-center py-5">
                                <div class="icon icon-shape icon-xxl mb-4 bg-gradient-primary shadow-primary text-center border-radius-extra mx-auto d-flex align-items-center justify-content-center opacity-8">
                                    <i class="fas fa-comments text-white text-3xl"></i>
                                </div>
                                <h5 class="text-white font-weight-bold">No active chats yet</h5>
                                <p class="text-white-50">When members message you, they'll appear here.</p>
                                <a asp-controller="Member" asp-action="Index" class="btn btn-sm btn-outline-white mt-3 rounded-pill px-4">Find Members</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(15, 15, 15, 0.7) !important;
        backdrop-filter: blur(20px) saturate(180%);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
    }
    .chat-item {
        transition: all 0.3s ease;
    }
    .chat-item:hover {
        background: rgba(255, 255, 255, 0.08) !important;
        transform: translateX(5px);
    }
    .chat-item:hover .chat-arrow {
        opacity: 0.8;
        transform: translateX(5px);
    }
    .transition-all {
        transition: all 0.2s ease-in-out;
    }
    .border-radius-extra {
        border-radius: 2rem;
    }
    .text-3xl {
        font-size: 2.5rem;
    }
    .icon-xxl {
        width: 100px;
        height: 100px;
    }
    .avatar-lg {
        width: 50px !important;
        height: 50px !important;
        min-width: 50px;
        min-height: 50px;
    }
    .avatar-lg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

@section Scripts {
    <script>
        // Optional: SignalR to update unread counts or reorder list on new group message
    </script>
}
