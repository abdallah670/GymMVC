@model GymBLL.ModelVM.Workout.WorkoutPlanItemVM

@{
    ViewData["Title"] = "Exercise Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Exercise Details</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.ExerciseName</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Workout Plan</dt>
                <dd class="col-sm-9">@Model.WorkoutPlanName</dd>

                <dt class="col-sm-3">Day Number</dt>
                <dd class="col-sm-9">Day @Model.DayNumber</dd>

                <dt class="col-sm-3">Exercise</dt>
                <dd class="col-sm-9">@Model.ExerciseName</dd>

                <dt class="col-sm-3">Routine</dt>
                <dd class="col-sm-9">@Model.Sets Sets x @Model.Reps Reps</dd>

                <dt class="col-sm-3">Rest Time</dt>
                <dd class="col-sm-9">@Model.RestDuration seconds</dd>

                <dt class="col-sm-3">Equipment</dt>
                <dd class="col-sm-9">@Model.Equipment</dd>

                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Model.Notes</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" asp-route-workoutPlanId="@Model.WorkoutPlanId" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
