@model GymBLL.ModelVM.Workout.WorkoutPlanItemVM

@{
    ViewData["Title"] = "Edit Exercise";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Edit Exercise</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Exercise Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="WorkoutPlanId" />
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div class="form-group">
                    <label class="control-label">Workout Plan</label>
                    <input type="text" class="form-control" value="@ViewBag.PlanName" readonly />
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ExerciseName" class="control-label"></label>
                        <input asp-for="ExerciseName" class="form-control" />
                        <span asp-validation-for="ExerciseName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DayNumber" class="control-label"></label>
                        <input asp-for="DayNumber" class="form-control" min="1" />
                        <span asp-validation-for="DayNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Sets" class="control-label"></label>
                        <input asp-for="Sets" class="form-control" min="1" />
                        <span asp-validation-for="Sets" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Reps" class="control-label"></label>
                        <input asp-for="Reps" class="form-control" min="1" />
                        <span asp-validation-for="Reps" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="RestDuration" class="control-label"></label>
                        <input asp-for="RestDuration" class="form-control" min="0" />
                        <span asp-validation-for="RestDuration" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Equipment" class="control-label"></label>
                    <input asp-for="Equipment" class="form-control" />
                    <span asp-validation-for="Equipment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoUrl" class="control-label"></label>
                    <input asp-for="VideoUrl" class="form-control" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-workoutPlanId="@Model.WorkoutPlanId" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
