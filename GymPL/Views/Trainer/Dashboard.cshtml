@{
    ViewData["Title"] = "Trainer Dashboard";
}

<section id="trainer-dashboard" class="trainer-dashboard">

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card clients-card">
            <div class="stat-content">
                <div class="stat-info">
                    <h4 class="stat-title">Clients</h4>
                    <h2 class="stat-number">0</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>

        <div class="stat-card sessions-card">
            <div class="stat-content">
                <div class="stat-info">
                    <h4 class="stat-title">Sessions</h4>
                    <h2 class="stat-number">0</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-calendar"></i>
                </div>
            </div>
        </div>

        <div class="stat-card workouts-card">
            <div class="stat-content">
                <div class="stat-info">
                    <h4 class="stat-title">Workouts</h4>
                    <h2 class="stat-number">0</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
            </div>
        </div>

        <div class="stat-card rating-card">
            <div class="stat-content">
                <div class="stat-info">
                    <h4 class="stat-title">Rating</h4>
                    <h2 class="stat-number">0.0</h2>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions-section">
        <div class="section-card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="actions-grid">
                    <a href="@Url.Action("Profile")" class="action-btn profile-btn">
                        <i class="fas fa-user me-2"></i>My Profile
                    </a>
                    <a href="#" class="action-btn schedule-btn">
                        <i class="fas fa-calendar me-2"></i>My Schedule
                    </a>
                    <a href="#" class="action-btn clients-btn">
                        <i class="fas fa-users me-2"></i>My Clients
                    </a>
                    <a href="#" class="action-btn workouts-btn">
                        <i class="fas fa-dumbbell me-2"></i>Workout Plans
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>