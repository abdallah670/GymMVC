@model List<GymBLL.ModelVM.User.Member.MemberVM>

@{
    ViewData["Title"] = "My Members";
}

<div class="container" style="max-width: var(--maxw); margin: 2rem auto; padding: 0 1rem;">
    <!-- Header -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="color: var(--ink); margin-bottom: 0.5rem;">
                <i class="fas fa-users"></i> My Members
            </h2>
            <p style="color: var(--muted); margin: 0;">Manage your assigned members and their training plans</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div style="text-align: center; padding: 4rem 2rem; background: var(--tile); border-radius: var(--radius); border: 1px solid var(--frame);">
            <i class="fas fa-user-slash" style="font-size: 4rem; color: var(--muted); opacity: 0.5; margin-bottom: 1rem;"></i>
            <h3 style="color: var(--ink); margin-bottom: 0.5rem;">No Members Assigned</h3>
            <p style="color: var(--muted);">You don't have any members assigned to you yet.</p>
        </div>
    }
    else
    {
        <!-- Members Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 1.5rem;">
            @foreach (var member in Model)
            {
                <div class="member-card" data-member-id="@member.Id" style="background: var(--tile); border-radius: var(--radius); border: 1px solid var(--frame); padding: 1.5rem; transition: all 0.3s;">
                    <!-- Member Header -->
                    <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1rem;">
                        <div style="width: 60px; height: 60px; border-radius: 50%; background: linear-gradient(135deg, var(--main-color), var(--secondary-color)); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; font-weight: 700; flex-shrink: 0;">
                            @member.FullName?.Substring(0, 1).ToUpper()
                        </div>
                        <div style="flex: 1; min-width: 0;">
                            <h4 style="color: var(--ink); margin-bottom: 0.25rem; font-size: 1.1rem;">@member.FullName</h4>
                            <div style="color: var(--muted); font-size: 0.85rem;">
                                <i class="fas fa-envelope"></i> @member.Email
                            </div>
                            @if (!string.IsNullOrEmpty(member.Phone))
                            {
                                <div style="color: var(--muted); font-size: 0.85rem; margin-top: 0.25rem;">
                                    <i class="fas fa-phone"></i> @member.Phone
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Member Info -->
                    <div style="padding: 1rem; background: var(--frame); border-radius: var(--radius); margin-bottom: 1rem;">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem; font-size: 0.9rem;">
                            <div>
                                <div style="color: var(--muted); font-size: 0.8rem;">Joined</div>
                                <div style="color: var(--ink); font-weight: 600;">@member.JoinDate.ToString("MMM dd, yyyy")</div>
                            </div>
                            @if (!string.IsNullOrEmpty(member.FitnessGoal.GoalName))
                            {
                                <div>
                                    <div style="color: var(--muted); font-size: 0.8rem;">Goal</div>
                                    <div style="color: var(--ink); font-weight: 600;">@member.FitnessGoal.GoalName</div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Plan Status (will be loaded via AJAX) -->
                    <div class="plan-status-@member.Id" style="margin-bottom: 1rem;">
                        <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
                            <div class="workout-status" style="flex: 1; padding: 0.5rem; background: var(--frame); border-radius: var(--radius); text-align: center; font-size: 0.85rem;">
                                <i class="fas fa-spinner fa-spin"></i>
                            </div>
                            <div class="diet-status" style="flex: 1; padding: 0.5rem; background: var(--frame); border-radius: var(--radius); text-align: center; font-size: 0.85rem;">
                                <i class="fas fa-spinner fa-spin"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div style="display: flex; gap: 0.5rem;">
                        <a href="@Url.Action("MemberDetails", new { id = member.Id })" class="btn btn-primary" style="flex: 1; text-align: center; font-size: 0.9rem; padding: 0.6rem;">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                     
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Load plan status for each member
            @foreach (var member in Model)
            {
                <text>
                loadMemberPlanStatus('@member.Id');
                </text>
            }
        });

        async function loadMemberPlanStatus(memberId) {
            try {
                const response = await fetch('@Url.Action("GetMemberPlanStatus")?memberId=' + memberId);
                const data = await response.json();

                const statusContainer = document.querySelector('.plan-status-' + memberId);
                
                // Update workout status
                const workoutStatus = statusContainer.querySelector('.workout-status');
                if (data.hasWorkoutPlan) {
                    workoutStatus.innerHTML = '<i class="fas fa-check-circle" style="color: var(--success);"></i> Has Workout Plan';
                    workoutStatus.style.background = 'color-mix(in srgb, var(--success) 10%, transparent)';
                } else {
                    workoutStatus.innerHTML = '<i class="fas fa-times-circle" style="color: var(--warning);"></i> No Workout Plan';
                    workoutStatus.style.background = 'color-mix(in srgb, var(--warning) 10%, transparent)';
                }

                // Update diet status
                const dietStatus = statusContainer.querySelector('.diet-status');
                if (data.hasDietPlan) {
                    dietStatus.innerHTML = '<i class="fas fa-check-circle" style="color: var(--success);"></i> Has Diet Plan';
                    dietStatus.style.background = 'color-mix(in srgb, var(--success) 10%, transparent)';
                } else {
                    dietStatus.innerHTML = '<i class="fas fa-times-circle" style="color: var(--warning);"></i> No Diet Plan';
                    dietStatus.style.background = 'color-mix(in srgb, var(--warning) 10%, transparent)';
                }

            } catch (error) {
                console.error('Error loading plan status for member ' + memberId, error);
            }
        }
    </script>
}

<style>
    .member-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        border-color: var(--main-color);
    }
</style>
